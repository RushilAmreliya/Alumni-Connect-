        // DOM ready function
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize the application
            initApp();
            
            // Load events when the events page is shown
            document.querySelector('[data-page="events"]').addEventListener('click', function() {
                setTimeout(loadEvents, 100);
            });
            
            // Load alumni directory when the directory page is shown
            document.querySelector('[data-page="directory"]').addEventListener('click', function() {
                setTimeout(loadAlumniDirectory, 100);
            });
        });

        // Initialize the application
        function initApp() {
            // Set up event listeners for navigation
            setupNavigation();
            
            // Set up authentication forms
            setupAuthForms();
            
            // Set up alumni directory functionality
            setupAlumniDirectory();
            
            // Load featured alumni on home page
            loadFeaturedAlumni();
        }

        // Set up navigation between pages
        function setupNavigation() {
            // Navigation links
            const navLinks = document.querySelectorAll('[data-page]');
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.getAttribute('data-page');
                    showPage(pageId);
                });
            });

            // Logout button
            document.getElementById('logoutBtn').addEventListener('click', function(e) {
                e.preventDefault();
                logout();
            });
        }

        // Show the specified page and hide others
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page').forEach(page => {
                page.classList.add('d-none');
            });

            // Show the selected page
            const pageElement = document.getElementById(`${pageId}-page`);
            if (pageElement) {
                pageElement.classList.remove('d-none');
                
                // Update active navigation link
                document.querySelectorAll('.nav-link').forEach(link => {
                    link.classList.remove('active');
                });
                document.querySelector(`[data-page="${pageId}"]`).classList.add('active');
                
                // Load content for specific pages
                if (pageId === 'directory') {
                    loadAlumniDirectory();
                } else if (pageId === 'events') {
                    loadEvents();
                }
            }
        }

        // Set up authentication forms
        function setupAuthForms() {
            // Login form
            document.getElementById('loginForm').addEventListener('submit', function(e) {
                e.preventDefault();
                login();
            });

            // Show register form link
            document.getElementById('showRegister').addEventListener('click', function(e) {
                e.preventDefault();
                // In a real app, this would show a registration form
                showToast('Registration feature would be implemented here', 'info');
            });
        }

        // Set up alumni directory functionality
        function setupAlumniDirectory() {
            // Add profile button
            document.getElementById('addProfileBtn').addEventListener('click', function() {
                // Reset form
                document.getElementById('addProfileForm').reset();
                document.getElementById('profileSkillsContainer').innerHTML = '';
                document.getElementById('qualificationsContainer').innerHTML = '';
                
                // Show modal
                const modal = new bootstrap.Modal(document.getElementById('addProfileModal'));
                modal.show();
            });
            
            // Add skill button
            document.getElementById('addSkillBtn').addEventListener('click', function() {
                const skillInput = document.getElementById('profileSkillInput');
                const skill = skillInput.value.trim();
                
                if (skill) {
                    addSkillToProfile(skill);
                    skillInput.value = '';
                }
            });
            
            // Add qualification button
            document.getElementById('addQualificationBtn').addEventListener('click', function() {
                addQualificationField();
            });
            
            // Save profile button
            document.getElementById('saveProfileBtn').addEventListener('click', function() {
                saveAlumniProfile();
            });
            
            // Search functionality
            document.getElementById('searchButton').addEventListener('click', function() {
                filterAlumni();
            });
            
            document.getElementById('searchInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    filterAlumni();
                }
            });
            
            // Advanced search toggle
            document.getElementById('advancedSearchToggle').addEventListener('click', function() {
                const advancedSearchTools = document.getElementById('advancedSearchTools');
                advancedSearchTools.classList.toggle('d-none');
            });
            
            // Apply filters button
            document.getElementById('applyFilters').addEventListener('click', function() {
                filterAlumni();
            });
            
            // Clear filters button
            document.getElementById('clearFilters').addEventListener('click', function() {
                document.getElementById('branchFilter').value = '';
                document.getElementById('yearFilter').value = '';
                document.getElementById('locationFilter').value = '';
                document.getElementById('companyFilter').value = '';
                document.getElementById('skillsFilter').selectedIndex = -1;
                document.getElementById('availableForMentoring').checked = false;
                document.getElementById('hiring').checked = false;
                
                filterAlumni();
            });
        }

        // Add skill to profile
        function addSkillToProfile(skill) {
            const skillsContainer = document.getElementById('profileSkillsContainer');
            const skillId = 'skill-' + Date.now();
            
            const skillElement = document.createElement('div');
            skillElement.className = 'skill-badge me-2 mb-2';
            skillElement.id = skillId;
            skillElement.innerHTML = `
                ${skill}
                <button type="button" class="btn-close btn-close-white ms-1" onclick="removeSkill('${skillId}')"></button>
            `;
            
            skillsContainer.appendChild(skillElement);
        }

        // Remove skill from profile
        function removeSkill(skillId) {
            const skillElement = document.getElementById(skillId);
            if (skillElement) {
                skillElement.remove();
            }
        }

        // Add qualification field
        function addQualificationField(qualification = null) {
            const qualificationsContainer = document.getElementById('qualificationsContainer');
            const qualificationId = 'qualification-' + Date.now();
            
            const qualificationElement = document.createElement('div');
            qualificationElement.className = 'qualification-item mb-3 p-3 bg-light rounded';
            qualificationElement.id = qualificationId;
            
            qualificationElement.innerHTML = `
                <div class="qualification-header mb-2">
                    <h6 class="mb-0">${qualification ? 'Edit Qualification' : 'New Qualification'}</h6>
                    <button type="button" class="btn-close" onclick="removeQualification('${qualificationId}')"></button>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-2">
                            <label class="form-label">Degree/Certificate</label>
                            <input type="text" class="form-control qualification-degree" value="${qualification ? qualification.degree : ''}" placeholder="e.g. B.Tech in Computer Science">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-2">
                            <label class="form-label">Institution</label>
                            <input type="text" class="form-control qualification-institution" value="${qualification ? qualification.institution : ''}" placeholder="e.g. IIT Delhi">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-2">
                            <label class="form-label">Year</label>
                            <input type="number" class="form-control qualification-year" value="${qualification ? qualification.year : ''}" min="1950" max="2030">
                        </div>
                    </div>
                </div>
                <div class="mb-2">
                    <label class="form-label">Description</label>
                    <textarea class="form-control qualification-description" rows="2" placeholder="Additional details about this qualification">${qualification ? qualification.description : ''}</textarea>
                </div>
            `;
            
            qualificationsContainer.appendChild(qualificationElement);
        }

        // Remove qualification field
        function removeQualification(qualificationId) {
            const qualificationElement = document.getElementById(qualificationId);
            if (qualificationElement) {
                qualificationElement.remove();
            }
        }

        // Save alumni profile
        function saveAlumniProfile() {
            // Get form values
            const name = document.getElementById('profileName').value.trim();
            const branch = document.getElementById('profileBranch').value;
            const graduationYear = document.getElementById('profileGraduationYear').value;
            const profession = document.getElementById('profileProfession').value.trim();
            const company = document.getElementById('profileCompany').value.trim();
            const location = document.getElementById('profileLocation').value.trim();
            const bio = document.getElementById('profileBio').value.trim();
            const image = document.getElementById('profileImage').value.trim();
            const email = document.getElementById('profileEmail').value.trim();
            const phone = document.getElementById('profilePhone').value.trim();
            const linkedin = document.getElementById('profileLinkedIn').value.trim();
            
            // Validate required fields
            if (!name || !branch || !graduationYear || !profession) {
                showToast('Please fill in all required fields', 'error');
                return;
            }
            
            // Get skills
            const skillElements = document.getElementById('profileSkillsContainer').querySelectorAll('.skill-badge');
            const skills = Array.from(skillElements).map(skillElement => {
                return skillElement.textContent.replace('×', '').trim();
            });
            
            // Get qualifications
            const qualificationElements = document.getElementById('qualificationsContainer').querySelectorAll('.qualification-item');
            const qualifications = Array.from(qualificationElements).map(qualificationElement => {
                return {
                    degree: qualificationElement.querySelector('.qualification-degree').value.trim(),
                    institution: qualificationElement.querySelector('.qualification-institution').value.trim(),
                    year: qualificationElement.querySelector('.qualification-year').value,
                    description: qualificationElement.querySelector('.qualification-description').value.trim()
                };
            }).filter(q => q.degree && q.institution); // Only include qualifications with required fields
            
            // Create new profile
            const newProfile = {
                id: alumniProfiles.length > 0 ? Math.max(...alumniProfiles.map(p => p.id)) + 1 : 1,
                name,
                branch,
                graduationYear: parseInt(graduationYear),
                profession,
                company,
                location,
                bio,
                image: image || 'https://via.placeholder.com/200x200?text=No+Image',
                skills,
                qualifications,
                email,
                phone,
                linkedin
            };
            
            // Add to alumni profiles
            alumniProfiles.push(newProfile);
            
            // Save to localStorage
            localStorage.setItem('alumniProfiles', JSON.stringify(alumniProfiles));
            
            // Close modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('addProfileModal'));
            modal.hide();
            
            // Show success message
            showToast('Profile added successfully!', 'success');
            
            // Reload alumni directory if it's currently visible
            if (!document.getElementById('directory-page').classList.contains('d-none')) {
                loadAlumniDirectory();
            }
        }

        // Load alumni directory
        function loadAlumniDirectory() {
            const alumniGrid = document.getElementById('alumniGrid');
            const alumniList = document.getElementById('alumniList');
            
            // Clear existing content
            alumniGrid.innerHTML = '';
            alumniList.innerHTML = '';
            
            // Show loading spinner
            document.getElementById('directoryLoading').classList.remove('d-none');
            
            // Simulate loading delay
            setTimeout(() => {
                // Hide loading spinner
                document.getElementById('directoryLoading').classList.add('d-none');
                
                // Add alumni to grid view
                alumniProfiles.forEach(alumni => {
                    const alumniCard = createAlumniCard(alumni);
                    alumniGrid.appendChild(alumniCard);
                });
                
                // Add alumni to list view
                alumniProfiles.forEach(alumni => {
                    const alumniItem = createAlumniListItem(alumni);
                    alumniList.appendChild(alumniItem);
                });
            }, 500);
        }

        // Filter alumni based on search criteria
        function filterAlumni() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const branchFilter = document.getElementById('branchFilter').value;
            const yearFilter = document.getElementById('yearFilter').value;
            const locationFilter = document.getElementById('locationFilter').value.toLowerCase();
            const companyFilter = document.getElementById('companyFilter').value.toLowerCase();
            
            const filteredAlumni = alumniProfiles.filter(alumni => {
                // Search term filter
                const matchesSearch = searchTerm === '' || 
                    alumni.name.toLowerCase().includes(searchTerm) ||
                    alumni.profession.toLowerCase().includes(searchTerm) ||
                    alumni.company.toLowerCase().includes(searchTerm) ||
                    alumni.skills.some(skill => skill.toLowerCase().includes(searchTerm));
                
                // Branch filter
                const matchesBranch = branchFilter === '' || alumni.branch === branchFilter;
                
                // Year filter
                const matchesYear = yearFilter === '' || alumni.graduationYear.toString() === yearFilter;
                
                // Location filter
                const matchesLocation = locationFilter === '' || 
                    (alumni.location && alumni.location.toLowerCase().includes(locationFilter));
                
                // Company filter
                const matchesCompany = companyFilter === '' || 
                    (alumni.company && alumni.company.toLowerCase().includes(companyFilter));
                
                return matchesSearch && matchesBranch && matchesYear && matchesLocation && matchesCompany;
            });
            
            // Update alumni grid
            const alumniGrid = document.getElementById('alumniGrid');
            alumniGrid.innerHTML = '';
            
            filteredAlumni.forEach(alumni => {
                const alumniCard = createAlumniCard(alumni);
                alumniGrid.appendChild(alumniCard);
            });
            
            // Update alumni list
            const alumniList = document.getElementById('alumniList');
            alumniList.innerHTML = '';
            
            filteredAlumni.forEach(alumni => {
                const alumniItem = createAlumniListItem(alumni);
                alumniList.appendChild(alumniItem);
            });
            
            // Show message if no results
            if (filteredAlumni.length === 0) {
                alumniGrid.innerHTML = `
                    <div class="col-12 text-center py-5">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h4>No alumni found</h4>
                        <p class="text-muted">Try adjusting your search criteria</p>
                    </div>
                `;
            }
        }

        // Create alumni card for grid view
        function createAlumniCard(alumni) {
            const col = document.createElement('div');
            col.className = 'col-md-6 col-lg-4 mb-4';
            
            const branchName = getBranchName(alumni.branch);
            
            col.innerHTML = `
                <div class="card alumni-card ${alumni.branch}">
                    <span class="branch-badge">${branchName}</span>
                    <div class="card-body text-center">
                        <img src="${alumni.image}" alt="${alumni.name}" class="alumni-img mb-3">
                        <h5 class="card-title">${alumni.name}</h5>
                        <p class="card-text text-muted">${alumni.profession}</p>
                        <p class="card-text"><small class="text-muted">${alumni.company} • ${alumni.graduationYear}</small></p>
                        <div class="mb-3">
                            ${alumni.skills.map(skill => `<span class="badge bg-light text-dark me-1 mb-1">${skill}</span>`).join('')}
                        </div>
                        <div class="social-links">
                            <a href="#"><i class="fab fa-linkedin"></i></a>
                            <a href="#"><i class="fab fa-twitter"></i></a>
                            <a href="#"><i class="fas fa-envelope"></i></a>
                        </div>
                        <button class="btn btn-outline-primary btn-sm mt-3 view-profile-btn" data-alumni-id="${alumni.id}">View Profile</button>
                    </div>
                </div>
            `;
            
            // Add event listener to view profile button
            col.querySelector('.view-profile-btn').addEventListener('click', function() {
                viewAlumniProfile(alumni.id);
            });
            
            return col;
        }

        // Create alumni item for list view
        function createAlumniListItem(alumni) {
            const li = document.createElement('div');
            li.className = 'card mb-3';
            
            const branchName = getBranchName(alumni.branch);
            
            li.innerHTML = `
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <img src="${alumni.image}" alt="${alumni.name}" class="alumni-img">
                        </div>
                        <div class="col-md-6">
                            <h5 class="card-title">${alumni.name}</h5>
                            <p class="card-text mb-1">${alumni.profession} at ${alumni.company}</p>
                            <p class="card-text mb-1"><small class="text-muted">${branchName} • ${alumni.graduationYear}</small></p>
                            <p class="card-text mb-1"><small class="text-muted">${alumni.location}</small></p>
                            <div class="mt-2">
                                ${alumni.skills.map(skill => `<span class="badge bg-light text-dark me-1 mb-1">${skill}</span>`).join('')}
                            </div>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <button class="btn btn-outline-primary btn-sm view-profile-btn" data-alumni-id="${alumni.id}">View Profile</button>
                            <button class="btn btn-outline-secondary btn-sm">Connect</button>
                        </div>
                    </div>
                </div>
            `;
            
            // Add event listener to view profile button
            li.querySelector('.view-profile-btn').addEventListener('click', function() {
                viewAlumniProfile(alumni.id);
            });
            
            return li;
        }

        // View alumni profile
        function viewAlumniProfile(alumniId) {
            const alumni = alumniProfiles.find(a => a.id === alumniId);
            
            if (!alumni) {
                showToast('Alumni profile not found', 'error');
                return;
            }
            
            // Create modal HTML
            const modalHTML = `
                <div class="modal fade" id="alumniProfileModal" tabindex="-1" aria-labelledby="alumniProfileModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="alumniProfileModalLabel">${alumni.name}'s Profile</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="text-center mb-4">
                                    <img src="${alumni.image}" alt="${alumni.name}" class="profile-img mb-3">
                                    <h3>${alumni.name}</h3>
                                    <p class="text-muted">${alumni.profession} at ${alumni.company}</p>
                                    <span class="badge bg-primary">${getBranchName(alumni.branch)}</span>
                                    <span class="badge bg-secondary">Class of ${alumni.graduationYear}</span>
                                </div>
                                
                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <h5>Contact Information</h5>
                                        <ul class="list-unstyled">
                                            ${alumni.email ? `<li><i class="fas fa-envelope me-2"></i> ${alumni.email}</li>` : ''}
                                            ${alumni.phone ? `<li><i class="fas fa-phone me-2"></i> ${alumni.phone}</li>` : ''}
                                            ${alumni.location ? `<li><i class="fas fa-map-marker-alt me-2"></i> ${alumni.location}</li>` : ''}
                                            ${alumni.linkedin ? `<li><i class="fab fa-linkedin me-2"></i> <a href="${alumni.linkedin}" target="_blank">LinkedIn Profile</a></li>` : ''}
                                        </ul>
                                    </div>
                                    <div class="col-md-6">
                                        <h5>Skills</h5>
                                        <div>
                                            ${alumni.skills.map(skill => `<span class="badge bg-light text-dark me-1 mb-1">${skill}</span>`).join('')}
                                        </div>
                                    </div>
                                </div>
                                
                                ${alumni.bio ? `
                                <div class="mb-4">
                                    <h5>About</h5>
                                    <p>${alumni.bio}</p>
                                </div>
                                ` : ''}
                                
                                ${alumni.qualifications && alumni.qualifications.length > 0 ? `
                                <div class="mb-4">
                                    <h5>Education & Qualifications</h5>
                                    ${alumni.qualifications.map(qualification => `
                                        <div class="qualification-item mb-3">
                                            <h6 class="mb-1">${qualification.degree}</h6>
                                            <p class="mb-1">${qualification.institution} • ${qualification.year}</p>
                                            ${qualification.description ? `<p class="text-muted mb-0">${qualification.description}</p>` : ''}
                                        </div>
                                    `).join('')}
                                </div>
                                ` : ''}
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Connect</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            // Remove existing modal if any
            const existingModal = document.getElementById('alumniProfileModal');
            if (existingModal) {
                existingModal.remove();
            }
            
            // Add modal to document
            document.body.insertAdjacentHTML('beforeend', modalHTML);
            
            // Show modal
            const modal = new bootstrap.Modal(document.getElementById('alumniProfileModal'));
            modal.show();
        }

        // Login function
        function login() {
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;

            // Simple validation
            if (!email || !password) {
                showToast('Please enter both email and password', 'error');
                return;
            }

            // Simulate successful login
            showToast('Login successful! Redirecting...', 'success');
            
            // Hide auth container and show main application after a delay
            setTimeout(() => {
                document.getElementById('authContainer').style.display = 'none';
                document.getElementById('mainApplication').style.display = 'block';
                
                // Set username in navbar
                document.getElementById('username').textContent = email.split('@')[0];
                
                // Show home page by default
                showPage('home');
            }, 1500);
        }

        // Logout function
        function logout() {
            // Show auth container and hide main application
            document.getElementById('authContainer').style.display = 'flex';
            document.getElementById('mainApplication').style.display = 'none';
            
            // Clear form fields
            document.getElementById('loginEmail').value = '';
            document.getElementById('loginPassword').value = '';
            
            showToast('You have been logged out', 'info');
        }

        // Load featured alumni for the home page
        function loadFeaturedAlumni() {
            const featuredAlumniContainer = document.getElementById('featuredAlumni');
            
            // Get 4 random alumni
            const featuredAlumni = [...alumniProfiles].sort(() => 0.5 - Math.random()).slice(0, 4);
            
            // Clear the container
            featuredAlumniContainer.innerHTML = '';
            
            // Add alumni cards
            featuredAlumni.forEach(alumni => {
                const branchClass = alumni.branch;
                const branchName = getBranchName(alumni.branch);
                
                const card = document.createElement('div');
                card.className = 'col-md-6 col-lg-3 mb-4';
                card.innerHTML = `
                    <div class="card alumni-card ${branchClass}">
                        <span class="branch-badge">${branchName}</span>
                        <div class="card-body text-center">
                            <img src="${alumni.image}" alt="${alumni.name}" class="alumni-img mb-3">
                            <h5 class="card-title">${alumni.name}</h5>
                            <p class="card-text text-muted">${alumni.profession}</p>
                            <p class="card-text"><small class="text-muted">${alumni.company} • ${alumni.graduationYear}</small></p>
                            <div class="social-links">
                                <a href="#"><i class="fab fa-linkedin"></i></a>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                                <a href="#"><i class="fas fa-envelope"></i></a>
                            </div>
                            <button class="btn btn-outline-primary btn-sm mt-3 connect-btn">Connect</button>
                        </div>
                    </div>
                `;
                
                featuredAlumniContainer.appendChild(card);
            });
        }

        // Load events for the events page
        function loadEvents() {
            const eventsGrid = document.getElementById('eventsGrid');
            const eventsList = document.getElementById('eventsList');
            
            // Clear existing content
            eventsGrid.innerHTML = '';
            eventsList.innerHTML = '';
            
            // Show loading spinner
            document.getElementById('eventsLoading').classList.remove('d-none');
            
            // Simulate loading delay
            setTimeout(() => {
                // Hide loading spinner
                document.getElementById('eventsLoading').classList.add('d-none');
                
                // Add events to grid view
                eventsData.forEach(event => {
                    const eventCard = createEventCard(event);
                    eventsGrid.appendChild(eventCard);
                });
                
                // Add events to list view
                eventsData.forEach(event => {
                    const eventItem = createEventListItem(event);
                    eventsList.appendChild(eventItem);
                });
                
                // Set up event registration buttons
                document.querySelectorAll('.register-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const eventId = this.getAttribute('data-event-id');
                        registerForEvent(eventId);
                    });
                });
            }, 1000);
        }

        // Create an event card for grid view
        function createEventCard(event) {
            const col = document.createElement('div');
            col.className = 'col-md-6 col-lg-4 mb-4';
            
            const formattedDate = formatEventDate(event.date);
            const branchName = getBranchName(event.branch);
            const registrationPercentage = Math.round((event.registered / event.capacity) * 100);
            
            col.innerHTML = `
                <div class="card event-card h-100">
                    <span class="event-type-badge event-type-${event.type}">${event.type.charAt(0).toUpperCase() + event.type.slice(1)}</span>
                    <span class="event-status-badge event-status-${event.status}">${event.status.charAt(0).toUpperCase() + event.status.slice(1)}</span>
                    <img src="${event.image}" class="card-img-top event-image" alt="${event.title}">
                    <div class="card-body">
                        <h5 class="card-title">${event.title}</h5>
                        <div class="d-flex align-items-center mb-2">
                            <div class="event-date bg-primary text-white rounded p-2 me-3">
                                <div class="month">${formattedDate.month}</div>
                                <div class="day">${formattedDate.day}</div>
                            </div>
                            <div>
                                <p class="mb-0"><i class="fas fa-clock me-2"></i>${formatTime(event.time)}</p>
                                <p class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>${event.location}</p>
                            </div>
                        </div>
                        <p class="card-text">${event.description}</p>
                        <div class="mb-3">
                            <span class="badge bg-secondary">${branchName}</span>
                            ${event.price > 0 ? `<span class="badge bg-info">$${event.price}</span>` : `<span class="badge bg-success">Free</span>`}
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">${event.registered} / ${event.capacity} registered</small>
                            <small class="text-muted">${registrationPercentage}% full</small>
                        </div>
                        <div class="progress event-registration-progress mb-3">
                            <div class="progress-bar" role="progressbar" style="width: ${registrationPercentage}%" aria-valuenow="${registrationPercentage}" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        ${event.status === 'upcoming' ? 
                            `<button class="btn btn-primary w-100 register-btn" data-event-id="${event.id}">Register Now</button>` : 
                            `<button class="btn btn-outline-secondary w-100" disabled>Event ${event.status}</button>`
                        }
                    </div>
                </div>
            `;
            
            return col;
        }

        // Create an event item for list view
        function createEventListItem(event) {
            const li = document.createElement('div');
            li.className = 'card mb-3';
            
            const formattedDate = formatEventDate(event.date);
            const branchName = getBranchName(event.branch);
            const registrationPercentage = Math.round((event.registered / event.capacity) * 100);
            
            li.innerHTML = `
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <img src="${event.image}" class="img-fluid rounded" alt="${event.title}">
                        </div>
                        <div class="col-md-6">
                            <h5 class="card-title">${event.title}</h5>
                            <div class="d-flex align-items-center mb-2">
                                <div class="event-date bg-primary text-white rounded p-2 me-3">
                                    <div class="month">${formattedDate.month}</div>
                                    <div class="day">${formattedDate.day}</div>
                                </div>
                                <div>
                                    <p class="mb-0"><i class="fas fa-clock me-2"></i>${formatTime(event.time)}</p>
                                    <p class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>${event.location}</p>
                                </div>
                            </div>
                            <p class="card-text">${event.description}</p>
                            <div class="mb-2">
                                <span class="badge bg-secondary">${branchName}</span>
                                <span class="badge event-type-${event.type}">${event.type.charAt(0).toUpperCase() + event.type.slice(1)}</span>
                                ${event.price > 0 ? `<span class="badge bg-info">$${event.price}</span>` : `<span class="badge bg-success">Free</span>`}
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex flex-column h-100 justify-content-between">
                                <div>
                                    <span class="badge event-status-${event.status}">${event.status.charAt(0).toUpperCase() + event.status.slice(1)}</span>
                                </div>
                                <div>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <small class="text-muted">${event.registered} / ${event.capacity} registered</small>
                                        <small class="text-muted">${registrationPercentage}% full</small>
                                    </div>
                                    <div class="progress event-registration-progress mb-3">
                                        <div class="progress-bar" role="progressbar" style="width: ${registrationPercentage}%" aria-valuenow="${registrationPercentage}" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    ${event.status === 'upcoming' ? 
                                        `<button class="btn btn-primary w-100 register-btn" data-event-id="${event.id}">Register Now</button>` : 
                                        `<button class="btn btn-outline-secondary w-100" disabled>Event ${event.status}</button>`
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            return li;
        }

        // Register for an event
        function registerForEvent(eventId) {
            const event = eventsData.find(e => e.id == eventId);
            
            if (event) {
                if (event.registered < event.capacity) {
                    // Simulate registration process
                    showToast(`Successfully registered for ${event.title}`, 'success');
                    
                    // Update registration count
                    event.registered++;
                    
                    // Reload events to update the UI
                    setTimeout(loadEvents, 500);
                } else {
                    showToast(`Sorry, ${event.title} is already full`, 'error');
                }
            }
        }

        // Format event date for display
        function formatEventDate(dateString) {
            const date = new Date(dateString);
            const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
            
            return {
                day: date.getDate(),
                month: months[date.getMonth()],
                year: date.getFullYear()
            };
        }

        // Format time for display
        function formatTime(timeString) {
            const [hours, minutes] = timeString.split(':');
            const h = parseInt(hours);
            const ampm = h >= 12 ? 'PM' : 'AM';
            const formattedHours = h % 12 || 12;
            
            return `${formattedHours}:${minutes} ${ampm}`;
        }

        // Get branch name from branch code
        function getBranchName(branchCode) {
            const branches = {
                'civil': 'Civil Engineering',
                'cse': 'Computer Science',
                'electrical': 'Electrical Engineering',
                'mechanical': 'Mechanical Engineering',
                'business': 'Business Administration',
                'medical': 'Medical Sciences',
                'arts': 'Arts & Humanities',
                'all': 'All Branches',
                'engineering': 'Engineering'
            };
            
            return branches[branchCode] || branchCode;
        }

        // Show toast notification
        function showToast(message, type = 'info') {
            const toastContainer = document.querySelector('.toast-container');
            
            const toast = document.createElement('div');
            toast.className = `toast`;
            
            // Set border color based on type
            if (type === 'error') {
                toast.style.borderLeftColor = '#dc3545';
            } else if (type === 'success') {
                toast.style.borderLeftColor = '#28a745';
            } else if (type === 'warning') {
                toast.style.borderLeftColor = '#ffc107';
            } else {
                toast.style.borderLeftColor = '#17a2b8';
            }
            
            toast.innerHTML = `
                <div class="toast-body d-flex justify-content-between align-items-center">
                    <div>${message}</div>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            `;
            
            toastContainer.appendChild(toast);
            
            // Initialize and show the toast
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            // Remove the toast from DOM after it's hidden
            toast.addEventListener('hidden.bs.toast', () => {
                toast.remove();
            });
        }
    </script>
</body>
</html>
