function loadProfile() {
    const container = document.querySelector('#profile-page .container');
    if (!container) return;

    // Remove old profile if present
    let old = document.getElementById('profile-detail-content');
    if (old) old.remove();

    // Wrapper div
    const div = document.createElement('div');
    div.id = 'profile-detail-content';

    div.innerHTML = `
    <div class="row align-items-center mb-4">
        <div class="col-auto">
            <img src="${userProfile.image}" class="rounded-circle border shadow" width="120" height="120" alt="Profile">
        </div>
        <div class="col">
            <h2 class="mb-1">${userProfile.name}</h2>
            <p class="mb-1 text-muted">${userProfile.branch} • Class of ${userProfile.gradYear}</p>
            <span class="badge bg-primary me-2">${userProfile.location}</span>
            <span class="badge bg-secondary">${userProfile.email}</span>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-outline-primary" id="editProfileBtn" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                <i class="fas fa-edit"></i> Edit Profile
            </button>
        </div>
    </div>
    <div class="mb-3">
        <h5>Bio</h5>
        <p>${userProfile.bio}</p>
    </div>
    <div class="mb-3 row">
        <div class="col-md-6">
            <h5>Experience</h5>
            <ul class="list-group mb-3">
                ${userProfile.experience.map(exp => `
                <li class="list-group-item">
                    <strong>${exp.role}</strong> @ ${exp.company}<br>
                    <span class="text-muted">${exp.years}</span>
                    <div>${exp.description}</div>
                </li>
                `).join('')}
            </ul>
        </div>
        <div class="col-md-6">
            <h5>Education</h5>
            <ul class="list-group mb-3">
                ${userProfile.education.map(edu => `
                <li class="list-group-item">
                    <strong>${edu.degree}</strong><br>
                    <span class="text-muted">${edu.institution} • ${edu.years}</span>
                </li>
                `).join('')}
            </ul>
        </div>
    </div>
    <div class="mb-3">
        <h5>Skills</h5>
        ${userProfile.skills.map(s => `<span class="badge bg-info me-1 mb-1">${s}</span>`).join('')}
    </div>
    <div class="mb-4">
        <h5>Links</h5>
        <a href="${userProfile.links.linkedin}" target="_blank" class="me-3 text-decoration-none"><i class="fab fa-linkedin fa-lg"></i></a>
        <a href="${userProfile.links.github}" target="_blank" class="me-3 text-decoration-none"><i class="fab fa-github fa-lg"></i></a>
        <a href="${userProfile.links.website}" target="_blank" class="me-3 text-decoration-none"><i class="fas fa-globe fa-lg"></i></a>
    </div>
    <!-- Edit Modal -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <form id="profileEditForm">
            <div class="modal-header">
              <h5 class="modal-title" id="editProfileLabel">Edit Profile</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                  <label class="form-label">Name</label>
                  <input type="text" class="form-control" name="name" value="${userProfile.name}" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Bio</label>
                  <textarea class="form-control" name="bio" rows="2">${userProfile.bio}</textarea>
                </div>
                <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input type="email" class="form-control" name="email" value="${userProfile.email}" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Phone</label>
                  <input type="text" class="form-control" name="phone" value="${userProfile.phone}">
                </div>
                <div class="mb-3">
                  <label class="form-label">Location</label>
                  <input type="text" class="form-control" name="location" value="${userProfile.location}">
                </div>
                <div class="mb-3">
                  <label class="form-label">LinkedIn</label>
                  <input type="url" class="form-control" name="linkedin" value="${userProfile.links.linkedin}">
                </div>
                <div class="mb-3">
                  <label class="form-label">GitHub</label>
                  <input type="url" class="form-control" name="github" value="${userProfile.links.github}">
                </div>
                <div class="mb-3">
                  <label class="form-label">Website</label>
                  <input type="url" class="form-control" name="website" value="${userProfile.links.website}">
                </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Save Changes</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    `;

    container.appendChild(div);

    // Setup edit profile handler (on modal form)
    setTimeout(() => {
        const form = document.getElementById('profileEditForm');
        if (form) {
            form.onsubmit = function(e) {
                e.preventDefault();
                // Read values from the form
                const data = new FormData(form);
                userProfile.name = data.get('name');
                userProfile.bio = data.get('bio');
                userProfile.email = data.get('email');
                userProfile.phone = data.get('phone');
                userProfile.location = data.get('location');
                userProfile.links.linkedin = data.get('linkedin');
                userProfile.links.github = data.get('github');
                userProfile.links.website = data.get('website');
                // Close modal and update view
                bootstrap.Modal.getInstance(document.getElementById('editProfileModal')).hide();
                setTimeout(loadProfile, 350);
            };
        }
    }, 350);
}

// Attach to navigation
document.addEventListener('DOMContentLoaded', function() {
    document.querySelector('[data-page="profile"]').addEventListener('click', function() {
        setTimeout(loadProfile, 100);
    });
});
</script>
<script>
// Sample connections data for demonstration
let userConnections = [
    {
        name: "Rajesh Kumar",
        image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=80&q=80",
        company: "Google",
        branch: "Computer Science",
        location: "San Francisco, USA",
        since: "2023-11-15",
        status: "connected"
    },
    {
        name: "Priya Sharma",
        image: "https://images.unsplash.com/photo-1544005313-94ddf0286df2?ixlib=rb-4.0.3&auto=format&fit=crop&w=80&q=80",
        company: "Microsoft",
        branch: "Business",
        location: "London, UK",
        since: "2024-09-02",
        status: "connected"
    },
    {
        name: "Amit Patel",
        image: "https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?ixlib=rb-4.0.3&auto=format&fit=crop&w=80&q=80",
        company: "Tesla",
        branch: "Electrical Engineering",
        location: "Palo Alto, USA",
        since: "2024-06-12",
        status: "pending"
    }
];

let connectionRequests = [
    {
        name: "Sneha Gupta",
        image: "https://images.unsplash.com/photo-1559839734-2b71ea197ec2?ixlib=rb-4.0.3&auto=format&fit=crop&w=80&q=80",
        company: "Mayo Clinic",
        branch: "Medical Sciences",
        location: "Boston, USA",
        requested: "2025-09-01"
    }
];

let connectionSuggestions = [
    {
        name: "Neha Verma",
        image: "https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?ixlib=rb-4.0.3&auto=format&fit=crop&w=80&q=80",
        company: "Amazon",
        branch: "Computer Science",
        location: "Bangalore, India",
        mutual: 3
    },
    {
        name: "John Williams",
        image: "https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-4.0.3&auto=format&fit=crop&w=80&q=80",
        company: "Oxford Univ.",
        branch: "Arts & Humanities",
        location: "London, UK",
        mutual: 1
    }
];

// Render Connections Page content
function loadConnections() {
    const container = document.querySelector('#connections-page .container');
    if (!container) return;

    // Remove old content if exists
    let old = document.getElementById('connections-content');
    if (old) old.remove();

    // Wrapper div
    const div = document.createElement('div');
    div.id = 'connections-content';

    // Search/filter interface
    div.innerHTML = `
    <h1 class="mb-4"><i class="fas fa-user-friends me-2"></i>My Connections</h1>
    <div class="mb-4">
      <div class="input-group mb-2">
        <input type="search" class="form-control" id="connectionsSearch" placeholder="Search connections by name, company, or branch...">
        <button class="btn btn-outline-secondary" id="clearConnectionsSearch"><i class="fas fa-times"></i></button>
      </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="mb-4">
                <h5>Connections <span class="badge bg-secondary">${userConnections.filter(x=>x.status==='connected').length}</span></h5>
                <div id="connections-list"></div>
            </div>
            <div class="mb-4">
                <h5>Pending Requests <span class="badge bg-warning">${userConnections.filter(x=>x.status==='pending').length}</span></h5>
                <div id="pending-connections-list"></div>
            </div>
            <div class="mb-4">
                <h5>Received Requests <span class="badge bg-info">${connectionRequests.length}</span></h5>
                <div id="incoming-requests-list"></div>
            </div>
        </div>
        <div class="col-lg-4">
            <h5>Suggestions for You</h5>
            <div id="connection-suggestions-list"></div>
        </div>
    </div>
    `;

    container.appendChild(div);

    // Helper: Create connection card
    function connectionCard(person, opts={}) {
        let actions = "";
        if (opts.type==="connected") {
            actions = `<span class="text-success"><i class="fas fa-check-circle"></i> Connected</span>`;
        } else if (opts.type==="pending") {
            actions = `<button class="btn btn-outline-danger btn-sm me-2 declined-btn" data-name="${person.name}">Withdraw</button>
                       <span class="text-warning"><i class="fas fa-hourglass"></i> Pending</span>`;
        } else if (opts.type==="incoming") {
            actions = `<button class="btn btn-success btn-sm me-2 accept-btn" data-name="${person.name}"><i class="fas fa-user-plus"></i> Accept</button>
                       <button class="btn btn-outline-secondary btn-sm decline-btn" data-name="${person.name}"><i class="fas fa-user-times"></i> Decline</button>`;
        } else if (opts.type==="suggestion") {
            actions = `<button class="btn btn-outline-primary btn-sm connect-suggest-btn" data-name="${person.name}"><i class="fas fa-user-plus"></i> Connect</button>
                       <span class="small text-muted">${person.mutual||0} mutual</span>`;
        }
        return `
<div class="card mb-2">
  <div class="card-body d-flex align-items-center">
    <img src="${person.image}" class="rounded-circle me-3" width="48" height="48" alt="${person.name}">
    <div class="flex-fill">
      <strong>${person.name}</strong><br>
      <span class="small text-muted">${person.company} • ${person.branch} • ${person.location}</span>
      ${person.since?`<div class="small">Connected since <span class="text-success">${person.since}</span></div>`:""}
      ${person.requested?`<div class="small">Requested <span class="text-info">${person.requested}</span></div>`:""}
    </div>
    <div class="ms-2 text-end">
      ${actions}
    </div>
  </div>
</div>
`;
    }

    // Render connected
    function renderConnections(filter="") {
        const list = userConnections.filter(c=>c.status==="connected" && (!filter || compositeMatch(c,filter)));
        const dest = document.getElementById('connections-list');
        dest.innerHTML = list.length ? list.map(c=>connectionCard(c,{type:"connected"})).join("") : `<div class="text-muted small">No connections found.</div>`;
    }

    // Render pending (sent) requests
    function renderPendingConnections(filter="") {
        const list = userConnections.filter(c=>c.status==="pending" && (!filter || compositeMatch(c,filter)));
        const dest = document.getElementById('pending-connections-list');
        dest.innerHTML = list.length ? list.map(c=>connectionCard(c,{type:"pending"})).join("") : `<div class="text-muted small">No pending requests.</div>`;
        // Withdraw logic
        Array.from(dest.querySelectorAll('.declined-btn')).forEach(btn=>{
            btn.onclick = function(){
                const idx = userConnections.findIndex(x=>x.name===btn.dataset.name && x.status==="pending");
                if(idx !== -1) {
                    userConnections.splice(idx,1);
                    renderPendingConnections(document.getElementById('connectionsSearch').value.trim());
                }
            };
        });
    }

    // Render incoming requests
    function renderRequests(filter="") {
        const list = connectionRequests.filter(c=>!filter || compositeMatch(c,filter));
        const dest = document.getElementById('incoming-requests-list');
        dest.innerHTML = list.length ? list.map(c=>connectionCard(c,{type:"incoming"})).join("") : `<div class="text-muted small">No requests.</div>`;
        // Accept/Decline logic
        Array.from(dest.querySelectorAll('.accept-btn')).forEach(btn=>{
            btn.onclick = function(){
                const idx = connectionRequests.findIndex(x=>x.name===btn.dataset.name);
                if(idx !== -1) {
                    // Move to connections as connected
                    userConnections.push({
                        ...connectionRequests[idx],
                        status: "connected",
                        since: new Date().toISOString().slice(0,10)
                    });
                    connectionRequests.splice(idx,1);
                    renderConnections(document.getElementById('connectionsSearch').value.trim());
                    renderRequests(document.getElementById('connectionsSearch').value.trim());
                }
            }
        });
        Array.from(dest.querySelectorAll('.decline-btn')).forEach(btn=>{
            btn.onclick = function(){
                const idx = connectionRequests.findIndex(x=>x.name===btn.dataset.name);
                if(idx !== -1) {
                    connectionRequests.splice(idx,1);
                    renderRequests(document.getElementById('connectionsSearch').value.trim());
                }
            }
        });
    }

    // Render suggestions
    function renderSuggestions(filter="") {
        const dest = document.getElementById('connection-suggestions-list');
        const list = connectionSuggestions.filter(s=>
            (!filter || compositeMatch(s,filter))
            && !userConnections.some(c=>c.name===s.name)
            && !connectionRequests.some(r=>r.name===s.name)
        );
        dest.innerHTML = list.length ? list.map(s=>connectionCard(s,{type:"suggestion"})).join("") : `<div class="text-muted small">No suggestions at this time.</div>`;
        // Connect logic
        Array.from(dest.querySelectorAll('.connect-suggest-btn')).forEach(btn=>{
            btn.onclick = function(){
                // Add as pending
                if(!userConnections.some(c=>c.name===btn.dataset.name)){
                    const person = connectionSuggestions.find(c=>c.name===btn.dataset.name);
                    userConnections.push({
                        ...person,
                        status:"pending"
                    });
                    renderPendingConnections(document.getElementById('connectionsSearch').value.trim());
                    renderSuggestions(document.getElementById('connectionsSearch').value.trim());
                }
            }
        });
    }

    // Helper: composite string match for search/filter
    function compositeMatch(obj,filter) {
        filter = filter.toLowerCase();
        return (obj.name && obj.name.toLowerCase().includes(filter)) ||
               (obj.company && obj.company.toLowerCase().includes(filter)) ||
               (obj.branch && obj.branch.toLowerCase().includes(filter)) ||
               (obj.location && obj.location.toLowerCase().includes(filter));
    }

    // Initial render
    renderConnections();
    renderPendingConnections();
    renderRequests();
    renderSuggestions();

    // Search/filter logic
    const searchInput = document.getElementById('connectionsSearch');
    const clearBtn = document.getElementById('clearConnectionsSearch');
    searchInput.addEventListener('input', function(){
        const val = this.value.trim();
        renderConnections(val);
        renderPendingConnections(val);
        renderRequests(val);
        renderSuggestions(val);
    });
    clearBtn.addEventListener('click', function(){
        searchInput.value='';
        renderConnections();
        renderPendingConnections();
        renderRequests();
        renderSuggestions();
    });
}

// Attach to navigation
document.addEventListener('DOMContentLoaded', function() {
    document.querySelector('[data-page="connections"]').addEventListener('click', function() {
        setTimeout(loadConnections, 100);
    });
});
</script>
<script>
// Initial sample alumni data — replace or extend as needed
let alumniProfiles = [
    {id: 1, name: "Rajesh Kumar", branch: "cse", profession: "Senior Software Engineer", company: "Google", image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80"},
    {id: 2, name: "Priya Sharma", branch: "business", profession: "Product Manager", company: "Microsoft", image: "https://images.unsplash.com/photo-1544005313-94ddf0286df2?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80"},
    {id: 3, name: "Amit Patel", branch: "electrical", profession: "Electrical Engineer", company: "Tesla", image: "https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80"}
];

// Helper: Returns branch display name
function getBranchName(code) {
    const map = {
        civil: "Civil Engineering",
        cse: "Computer Science",
        electrical: "Electrical Engineering",
        mechanical: "Mechanical Engineering",
        business: "Business Administration",
        medical: "Medical Sciences",
        arts: "Arts & Humanities",
        all: "All Branches",
        engineering: "Engineering"
    };
    return map[code] || code;
}

// Renders alumni profiles filtered by branch and profession
function renderAlumni(branchFilter = "", professionFilter = "") {
    const container = document.getElementById("alumniGrid");
    container.innerHTML = "";

    const filtered = alumniProfiles.filter(p => {
        const branchMatches = !branchFilter || p.branch === branchFilter;
        const professionMatches = !professionFilter || p.profession.toLowerCase().includes(professionFilter.toLowerCase());
        return branchMatches && professionMatches;
    });

    if(filtered.length === 0) {
        container.innerHTML = `<p class="text-muted">No alumni profiles found for the selected filters.</p>`;
        return;
    }

    filtered.forEach(profile => {
        const card = document.createElement("div");
        card.className = "col-md-6 col-lg-4 mb-4";
        card.innerHTML = `
            <div class="card alumni-card ${profile.branch}">
                <span class="branch-badge">${getBranchName(profile.branch)}</span>
                <div class="card-body text-center">
                    <img src="${profile.image}" alt="${profile.name}" class="alumni-img mb-3" />
                    <h5 class="card-title">${profile.name}</h5>
                    <p class="card-text text-muted">${profile.profession}</p>
                    <p class="card-text"><small class="text-muted">${profile.company}</small></p>
                </div>
            </div>
        `;
        container.appendChild(card);
    });
}

// Shows modal to add new alumni profile
function showAddProfileModal() {
    if (document.getElementById("addProfileModal")) {
        new bootstrap.Modal(document.getElementById("addProfileModal")).show();
        return;
    }

    const modalHTML = `
    <div class="modal fade" id="addProfileModal" tabindex="-1" aria-labelledby="addProfileLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <form id="addProfileForm">
            <div class="modal-header">
              <h5 class="modal-title" id="addProfileLabel">Add Alumni Profile</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3"><label class="form-label">Name</label><input required name="name" type="text" class="form-control" /></div>
              <div class="mb-3">
                <label class="form-label">Branch</label>
                <select required name="branch" class="form-select">
                  <option value="">Select Branch</option>
                  <option value="civil">Civil Engineering</option>
                  <option value="cse">Computer Science</option>
                  <option value="electrical">Electrical Engineering</option>
                  <option value="mechanical">Mechanical Engineering</option>
                  <option value="business">Business Administration</option>
                  <option value="medical">Medical Sciences</option>
                  <option value="arts">Arts & Humanities</option>
                </select>
              </div>
              <div class="mb-3"><label class="form-label">Profession</label><input required name="profession" type="text" class="form-control" placeholder="e.g. Software Engineer" /></div>
              <div class="mb-3"><label class="form-label">Company</label><input required name="company" type="text" class="form-control" /></div>
              <div class="mb-3"><label class="form-label">Image URL</label><input name="image" type="url" class="form-control" placeholder="Optional" /></div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Add Profile</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  `;

    document.body.insertAdjacentHTML('beforeend', modalHTML);

    const modal = new bootstrap.Modal(document.getElementById("addProfileModal"));
    modal.show();

    const form = document.getElementById("addProfileForm");
    form.addEventListener("submit", e => {
        e.preventDefault();
        const formData = new FormData(form);
        alumniProfiles.push({
            id: alumniProfiles.length + 1,
            name: formData.get("name").trim(),
            branch: formData.get("branch"),
            profession: formData.get("profession").trim(),
            company: formData.get("company").trim(),
            image: formData.get("image")?.trim() || "https://via.placeholder.com/200?text=No+Image"
        });
        modal.hide();

        // Trigger re-render using current filter values
        const branchFilter = document.getElementById("branchFilter")?.value || "";
        const professionFilter = document.getElementById("professionFilter")?.value.trim() || "";
        renderAlumni(branchFilter, professionFilter);
        showToast("Alumni profile added successfully.", "success");
    });
}

// Initialize directory page content dynamically
function loadAlumniDirectory() {
    const container = document.querySelector("#directory-page .container");
    if (!container) return;

    // Clean previous dynamic content except header
    let advancedSearchTools = document.getElementById("advancedSearchTools");
    if (!advancedSearchTools) {
        container.insertAdjacentHTML("afterbegin", `
            <div class="container mb-4" id="advancedSearchTools">
                <div class="search-box">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Advanced Filters</h5>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Branch/Department</label>
                                    <select class="form-select" id="branchFilter">
                                        <option value="">All Branches</option>
                                        <option value="civil">Civil Engineering</option>
                                        <option value="cse">Computer Science</option>
                                        <option value="electrical">Electrical Engineering</option>
                                        <option value="mechanical">Mechanical Engineering</option>
                                        <option value="business">Business Administration</option>
                                        <option value="medical">Medical Sciences</option>
                                        <option value="arts">Arts & Humanities</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Profession</label>
                                    <input type="text" id="professionFilter" class="form-control" placeholder="Search profession..." />
                                </div>
                            </div>
                            <button class="btn btn-primary btn-sm" id="applyFilters">Apply Filters</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" id="alumniGrid"></div>
        `);
    }

    // Add "Add Profile" button if missing
    const controls = container.querySelector(".col-md-4.text-md-end");
    if (controls && !document.getElementById("addProfileBtn")) {
        const addBtn = document.createElement("button");
        addBtn.id = "addProfileBtn";
        addBtn.type = "button";
        addBtn.className = "btn btn-light";
        addBtn.innerHTML = '<i class="fas fa-plus"></i> Add Profile';
        addBtn.addEventListener("click", showAddProfileModal);
        controls.appendChild(addBtn);
    }

    // Initial render without filters
    renderAlumni();

    // Setup filter apply button
    document.getElementById("applyFilters").onclick = () => {
        const branch = document.getElementById("branchFilter").value;
        const profession = document.getElementById("professionFilter").value.trim();
        renderAlumni(branch, profession);
    };
}

// Show toast messages (you may already have this function, else add it)
function showToast(message, type = "info") {
    const container = document.querySelector(".toast-container");
    if (!container) return;
    const toast = document.createElement("div");
    toast.className = "toast";
    toast.style.borderLeftColor = type === "success" ? "#28a745" : (type === "error" ? "#dc3545" : "#17a2b8");
    toast.innerHTML = `
        <div class="toast-body d-flex justify-content-between align-items-center">
            <div>${message}</div>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    `;
    container.appendChild(toast);
    const bsToast = new bootstrap.Toast(toast);
    bsToast.show();
    toast.addEventListener("hidden.bs.toast", () => toast.remove());
}

// Attach load function to directory page navigation event, if applicable
document.addEventListener("DOMContentLoaded", () => {
    const dirLink = document.querySelector('[data-page="directory"]');
    if(dirLink) {
        dirLink.addEventListener("click", e => {
            setTimeout(loadAlumniDirectory, 150);
        });
    }
});
</script>



</body>
</html>
