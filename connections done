    // Render recent opportunities on the Opportunities page
    function loadOpportunities() {
        const container = document.querySelector('#opportunities-page .container');
        if (!container) return;

        // Remove old dynamic listing if exists
        let oldList = document.getElementById('opportunities-list');
        if (oldList) oldList.remove();

        // Create new opportunity cards container
        const listDiv = document.createElement('div');
        listDiv.id = "opportunities-list";
        listDiv.className = "row mt-4";

        // Add section title
        const secTitle = document.createElement('h2');
        secTitle.className = 'section-title mb-4';
        secTitle.textContent = 'Recent Opportunities';
        container.appendChild(secTitle);

        opportunitiesData.forEach((opp) => {
            const col = document.createElement('div');
            col.className = 'col-md-6 col-lg-4 mb-4';

            col.innerHTML = `
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">${opp.title}</h5>
                        <ul class="list-unstyled mb-2">
                            <li><strong>Company:</strong> ${opp.company}</li>
                            <li><strong>Location:</strong> ${opp.location}</li>
                            <li><strong>Posted by:</strong> ${opp.poster}</li>
                            <li><strong>Date Posted:</strong> ${opp.datePosted}</li>
                            <li><strong>Type:</strong> ${opp.type}</li>
                        </ul>
                        <p class="card-text">${opp.description}</p>
                        <div>
                            <strong>Skills Required:</strong>
                            ${opp.skillsRequired.map(skill => `<span class="badge bg-info me-1">${skill}</span>`).join('')}
                        </div>
                        <a href="${opp.applyUrl}" class="btn btn-primary w-100 mt-3" target="_blank">Apply Now</a>
                    </div>
                </div>
            `;
            listDiv.appendChild(col);
        });

        container.appendChild(listDiv);
    }

    // Modify navigation logic to load opportunities dynamically
    document.addEventListener('DOMContentLoaded', function() {
        // Existing initialization...
        initApp();

        // Attach Opportunities page logic
        document.querySelector('[data-page="opportunities"]').addEventListener('click', function() {
            setTimeout(loadOpportunities, 100);
        });

        // (Other event listeners as before)
    });

    // The rest of your existing JS logic...

</script>
<script>
    // Sample dashboard data (can be made dynamic based on auth in real deployment)
    const dashboardData = {
        profile: {
            name: "Arjun Singh",
            email: "arjun.singh@sample.edu",
            image: "https://via.placeholder.com/80x80/1a4d8c/ffffff?text=A", // Placeholder, adjust as needed
            branch: "Computer Science",
            gradYear: 2020
        },
        stats: {
            connections: 58,
            messages: 12,
            participations: 5,
            recommendations: 6
        },
        connectionHistory: [
            { name: "Rajesh Kumar", company: "Google", since: "2023-11-15" },
            { name: "Neha Verma", company: "Amazon", since: "2024-02-05" },
            { name: "Priya Sharma", company: "Microsoft", since: "2024-09-02" }
        ],
        recentActivity: [
            { action: "Connected with Rajesh Kumar", date: "2025-09-06" },
            { action: "Registered for Annual Alumni Meet", date: "2025-09-03" },
            { action: "Received recommendation from Priya Sharma", date: "2025-08-29" }
        ]
    };

    // Dashboard rendering logic
    function loadDashboard() {
        const container = document.querySelector('#dashboard-page .container');
        if (!container) return;

        // Remove previous dashboard if exists
        let oldBoard = document.getElementById('dashboard-content');
        if (oldBoard) oldBoard.remove();

        // Dashboard wrapper
        const dashDiv = document.createElement('div');
        dashDiv.id = 'dashboard-content';

        // Profile summary widget
        dashDiv.innerHTML += `
        <div class="card mb-4">
            <div class="card-body d-flex align-items-center">
                <img src="${dashboardData.profile.image}" class="rounded-circle me-3" width="80" height="80" alt="Profile">
                <div>
                    <h3 class="card-title mb-0">${dashboardData.profile.name}</h3>
                    <p class="mb-0 text-muted">${dashboardData.profile.email}</p>
                    <span class="badge bg-primary me-2">${dashboardData.profile.branch}</span>
                    <span class="badge bg-secondary">Class of ${dashboardData.profile.gradYear}</span>
                </div>
            </div>
        </div>`;

        // Key user stats widget
        dashDiv.innerHTML += `
        <div class="row mb-4">
            <div class="col-md-3 col-6 mb-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h4 class="stats-number">${dashboardData.stats.connections}</h4>
                        <div class="text-muted">Connections</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h4 class="stats-number">${dashboardData.stats.messages}</h4>
                        <div class="text-muted">Messages</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h4 class="stats-number">${dashboardData.stats.participations}</h4>
                        <div class="text-muted">Event Participations</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h4 class="stats-number">${dashboardData.stats.recommendations}</h4>
                        <div class="text-muted">Recommendations</div>
                    </div>
                </div>
            </div>
        </div>`;

        // Connection history widget
        dashDiv.innerHTML += `
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Recent Connections</h5>
                <ul class="list-group list-group-flush">` +
                dashboardData.connectionHistory.map(con => `
                <li class="list-group-item">
                    <strong>${con.name}</strong> at ${con.company}
                    <span class="text-muted float-end">Since ${con.since}</span>
                </li>`).join('') +
                `</ul>
            </div>
        </div>`;

        // Recent activity widget
        dashDiv.innerHTML += `
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Recent Activity</h5>
                <ul class="list-unstyled mb-0">` +
                dashboardData.recentActivity.map(act => `
                    <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>${act.action} <span class="text-muted float-end">${act.date}</span></li>
                `).join('') +
                `</ul>
            </div>
        </div>`;

        container.appendChild(dashDiv);
    }

    // Attach dashboard logic to navigation
    document.addEventListener('DOMContentLoaded', function() {
        // Existing initialization...
        if (typeof initApp === "function") initApp();

        document.querySelector('[data-page="dashboard"]').addEventListener('click', function() {
            setTimeout(loadDashboard, 100);
        });
    });
</script>
<script>
// Profile sample data (can be made dynamic/auth-based as needed)
let userProfile = {
