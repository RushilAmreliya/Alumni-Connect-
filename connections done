        // Load alumni directory
        function loadAlumniDirectory() {
            // This would be implemented to load alumni data
            console.log('Loading alumni directory...');
        }

        // Load events for the events page
        function loadEvents() {
            const eventsGrid = document.getElementById('eventsGrid');
            const eventsList = document.getElementById('eventsList');
            
            // Clear existing content
            eventsGrid.innerHTML = '';
            eventsList.innerHTML = '';
            
            // Show loading spinner
            document.getElementById('eventsLoading').classList.remove('d-none');
            
            // Simulate loading delay
            setTimeout(() => {
                // Hide loading spinner
                document.getElementById('eventsLoading').classList.add('d-none');
                
                // Add events to grid view
                eventsData.forEach(event => {
                    const eventCard = createEventCard(event);
                    eventsGrid.appendChild(eventCard);
                });
                
                // Add events to list view
                eventsData.forEach(event => {
                    const eventItem = createEventListItem(event);
                    eventsList.appendChild(eventItem);
                });
                
                // Set up event registration buttons
                document.querySelectorAll('.register-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const eventId = this.getAttribute('data-event-id');
                        registerForEvent(eventId);
                    });
                });
            }, 1000);
        }

        // Create an event card for grid view
        function createEventCard(event) {
            const col = document.createElement('div');
            col.className = 'col-md-6 col-lg-4 mb-4';
            
            const formattedDate = formatEventDate(event.date);
            const branchName = getBranchName(event.branch);
            const registrationPercentage = Math.round((event.registered / event.capacity) * 100);
            
            col.innerHTML = `
                <div class="card event-card h-100">
                    <span class="event-type-badge event-type-${event.type}">${event.type.charAt(0).toUpperCase() + event.type.slice(1)}</span>
                    <span class="event-status-badge event-status-${event.status}">${event.status.charAt(0).toUpperCase() + event.status.slice(1)}</span>
                    <img src="${event.image}" class="card-img-top event-image" alt="${event.title}">
                    <div class="card-body">
                        <h5 class="card-title">${event.title}</h5>
                        <div class="d-flex align-items-center mb-2">
                            <div class="event-date bg-primary text-white rounded p-2 me-3">
                                <div class="month">${formattedDate.month}</div>
                                <div class="day">${formattedDate.day}</div>
                            </div>
                            <div>
                                <p class="mb-0"><i class="fas fa-clock me-2"></i>${formatTime(event.time)}</p>
                                <p class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>${event.location}</p>
                            </div>
                        </div>
                        <p class="card-text">${event.description}</p>
                        <div class="mb-3">
                            <span class="badge bg-secondary">${branchName}</span>
                            ${event.price > 0 ? `<span class="badge bg-info">$${event.price}</span>` : `<span class="badge bg-success">Free</span>`}
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">${event.registered} / ${event.capacity} registered</small>
                            <small class="text-muted">${registrationPercentage}% full</small>
                        </div>
                        <div class="progress event-registration-progress mb-3">
                            <div class="progress-bar" role="progressbar" style="width: ${registrationPercentage}%" aria-valuenow="${registrationPercentage}" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        ${event.status === 'upcoming' ? 
                            `<button class="btn btn-primary w-100 register-btn" data-event-id="${event.id}">Register Now</button>` : 
                            `<button class="btn btn-outline-secondary w-100" disabled>Event ${event.status}</button>`
                        }
                    </div>
                </div>
            `;
            
            return col;
        }

        // Create an event item for list view
        function createEventListItem(event) {
            const li = document.createElement('div');
            li.className = 'card mb-3';
            
            const formattedDate = formatEventDate(event.date);
            const branchName = getBranchName(event.branch);
            const registrationPercentage = Math.round((event.registered / event.capacity) * 100);
            
            li.innerHTML = `
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <img src="${event.image}" class="img-fluid rounded" alt="${event.title}">
                        </div>
                        <div class="col-md-6">
                            <h5 class="card-title">${event.title}</h5>
                            <div class="d-flex align-items-center mb-2">
                                <div class="event-date bg-primary text-white rounded p-2 me-3">
                                    <div class="month">${formattedDate.month}</div>
                                    <div class="day">${formattedDate.day}</div>
                                </div>
                                <div>
                                    <p class="mb-0"><i class="fas fa-clock me-2"></i>${formatTime(event.time)}</p>
                                    <p class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>${event.location}</p>
                                </div>
                            </div>
                            <p class="card-text">${event.description}</p>
                            <div class="mb-2">
                                <span class="badge bg-secondary">${branchName}</span>
                                <span class="badge event-type-${event.type}">${event.type.charAt(0).toUpperCase() + event.type.slice(1)}</span>
                                ${event.price > 0 ? `<span class="badge bg-info">$${event.price}</span>` : `<span class="badge bg-success">Free</span>`}
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex flex-column h-100 justify-content-between">
                                <div>
                                    <span class="badge event-status-${event.status}">${event.status.charAt(0).toUpperCase() + event.status.slice(1)}</span>
                                </div>
                                <div>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <small class="text-muted">${event.registered} / ${event.capacity} registered</small>
                                        <small class="text-muted">${registrationPercentage}% full</small>
                                    </div>
                                    <div class="progress event-registration-progress mb-3">
                                        <div class="progress-bar" role="progressbar" style="width: ${registrationPercentage}%" aria-valuenow="${registrationPercentage}" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    ${event.status === 'upcoming' ? 
                                        `<button class="btn btn-primary w-100 register-btn" data-event-id="${event.id}">Register Now</button>` : 
                                        `<button class="btn btn-outline-secondary w-100" disabled>Event ${event.status}</button>`
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            return li;
        }

        // Register for an event
        function registerForEvent(eventId) {
            const event = eventsData.find(e => e.id == eventId);
            
            if (event) {
                if (event.registered < event.capacity) {
                    // Simulate registration process
                    showToast(`Successfully registered for ${event.title}`, 'success');
                    
                    // Update registration count
                    event.registered++;
                    
                    // Reload events to update the UI
                    setTimeout(loadEvents, 500);
                } else {
                    showToast(`Sorry, ${event.title} is already full`, 'error');
                }
            }
        }

        // Format event date for display
        function formatEventDate(dateString) {
            const date = new Date(dateString);
            const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
            
            return {
                day: date.getDate(),
                month: months[date.getMonth()],
                year: date.getFullYear()
            };
        }

        // Format time for display
        function formatTime(timeString) {
            const [hours, minutes] = timeString.split(':');
            const h = parseInt(hours);
            const ampm = h >= 12 ? 'PM' : 'AM';
            const formattedHours = h % 12 || 12;
            
            return `${formattedHours}:${minutes} ${ampm}`;
        }

        // Get branch name from branch code
        function getBranchName(branchCode) {
            const branches = {
                'civil': 'Civil Engineering',
                'cse': 'Computer Science',
                'electrical': 'Electrical Engineering',
                'mechanical': 'Mechanical Engineering',
                'business': 'Business Administration',
                'medical': 'Medical Sciences',
                'arts': 'Arts & Humanities',
                'all': 'All Branches',
                'engineering': 'Engineering'
            };
            
            return branches[branchCode] || branchCode;
        }

        // Show toast notification
        function showToast(message, type = 'info') {
            const toastContainer = document.querySelector('.toast-container');
            
            const toast = document.createElement('div');
            toast.className = `toast`;
            
            // Set border color based on type
            if (type === 'error') {
                toast.style.borderLeftColor = '#dc3545';
            } else if (type === 'success') {
                toast.style.borderLeftColor = '#28a745';
            } else if (type === 'warning') {
                toast.style.borderLeftColor = '#ffc107';
            } else {
                toast.style.borderLeftColor = '#17a2b8';
            }
            
            toast.innerHTML = `
                <div class="toast-body d-flex justify-content-between align-items-center">
                    <div>${message}</div>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            `;
            
            toastContainer.appendChild(toast);
            
            // Initialize and show the toast
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            // Remove the toast from DOM after it's hidden
            toast.addEventListener('hidden.bs.toast', () => {
                toast.remove();
            });
        }
    </script>
