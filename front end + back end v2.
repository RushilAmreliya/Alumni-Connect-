            // Current view and filters
            let currentView = 'grid';
            let activeFilters = {
                branch: [],
                year: '',
                location: '',
                company: '',
                skills: [],
                mentoring: false,
                hiring: false
            };
            
            // Current user state
            let currentUser = null;
            let userProfile = null;
            
            // Check if user is logged in (from localStorage)
            function checkLoginStatus() {
                const userData = localStorage.getItem('currentUser');
                if (userData) {
                    currentUser = JSON.parse(userData);
                    
                    // Check if user has a profile
                    const userProfiles = JSON.parse(localStorage.getItem('userProfiles')) || [];
                    userProfile = userProfiles.find(profile => profile.userId === currentUser.id);
                    
                    showApplication();
                }
            }
            
            // Show the application content
            function showApplication() {
                document.getElementById('authContainer').style.display = 'none';
                document.getElementById('mainApplication').style.display = 'block';
                
                updateUIForLoggedInUser();
                loadFeaturedAlumni();
                
                // Show home page by default
                showPage('home');
            }
            
            // Update UI when user logs in
            function updateUIForLoggedInUser() {
                if (currentUser) {
                    document.getElementById('username').textContent = currentUser.firstName;
                    document.getElementById('navbarUserImg').src = currentUser.profileImage || 'https://via.placeholder.com/32x32/1a4d8c/ffffff?text=U';
                    
                    // Update notification count
                    updateNotificationCount();
                    
                    // Update dashboard stats
                    updateDashboardStats();
                }
            }
            
            // Update notification count
            function updateNotificationCount() {
                const notifications = JSON.parse(localStorage.getItem('notifications')) || [];
                const userNotifications = notifications.filter(n => n.userId === currentUser.id && !n.read);
                document.getElementById('notificationCount').textContent = userNotifications.length;
            }
            
            // Update dashboard stats
            function updateDashboardStats() {
                if (userProfile) {
                    document.getElementById('connectionCount').textContent = userProfile.connections ? userProfile.connections.length : 0;
                    document.getElementById('profileViews').textContent = userProfile.profileViews || 0;
                }
                
                // Load connection suggestions
                loadConnectionSuggestions();
                
                // Load upcoming events
                loadUpcomingEvents();
                
                // Load recent activity
                loadRecentActivity();
                
                // Load job recommendations
                loadJobRecommendations();
            }
            
            // Initialize the application
            function initApplication() {
                // Save alumni data to localStorage
                localStorage.setItem('alumniData', JSON.stringify(alumniData));
                
                checkLoginStatus();
                setupAuth();
                setupPageNavigation();
                setupEventListeners();
            }
            
            // Setup authentication
            function setupAuth() {
                // Show register modal
                document.getElementById('showRegister').addEventListener('click', function(e) {
                    e.preventDefault();
                    const registerModal = new bootstrap.Modal(document.getElementById('registerModal'));
                    registerModal.show();
                });
                
                // Login form submission
                document.getElementById('loginForm').addEventListener('submit', function(e) {
                    e.preventDefault();
                    const email = document.getElementById('loginEmail').value;
                    const password = document.getElementById('loginPassword').value;
                    
                    // Simulate login process
                    const submitBtn = this.querySelector('button[type="submit"]');
                    const originalText = submitBtn.textContent;
                    
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Signing in...';
                    
                    setTimeout(() => {
                        // For demo purposes, create a user object
                        currentUser = {
                            id: Date.now(),
                            firstName: 'John',
                            lastName: 'Doe',
                            email: email,
                            college: 'Stanford University',
                            graduationYear: '2020',
                            branch: 'Computer Science',
                            profileImage: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80'
                        };
                        
                        // Check if user has a profile
                        const userProfiles = JSON.parse(localStorage.getItem('userProfiles')) || [];
                        userProfile = userProfiles.find(profile => profile.userId === currentUser.id);
                        
                        if (!userProfile) {
                            // Create a basic profile for the user
                            userProfile = {
                                id: Date.now() + 1,
                                userId: currentUser.id,
                                name: `${currentUser.firstName} ${currentUser.lastName}`,
                                branch: currentUser.branch.toLowerCase(),
                                year: currentUser.graduationYear,
                                college: currentUser.college,
                                email: currentUser.email,
                                image: currentUser.profileImage,
                                skills: [],
                                experience: [],
                                social: {},
                                availableForMentoring: false,
                                hiring: false,
                                profileVisibility: true,
                                connections: [],
                                profileViews: 0
                            };
                            
                            userProfiles.push(userProfile);
                            localStorage.setItem('userProfiles', JSON.stringify(userProfiles));
                            
                            // Add to alumni data
                            alumniData.push(userProfile);
                            localStorage.setItem('alumniData', JSON.stringify(alumniData));
                        }
                        
                        // Save to localStorage
                        localStorage.setItem('currentUser', JSON.stringify(currentUser));
                        
                        // Show application
                        showApplication();
                        
                        // Show success message
                        showToast('Login successful!');
                        
                        submitBtn.disabled = false;
                        submitBtn.textContent = originalText;
                    }, 1500);
                });
                
                // Registration form submission
                document.getElementById('registerForm').addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Get form values
                    const firstName = document.getElementById('firstName').value;
                    const lastName = document.getElementById('lastName').value;
                    const email = document.getElementById('registerEmail').value;
                    const password = document.getElementById('registerPassword').value;
                    const confirmPassword = document.getElementById('confirmPassword').value;
                    const college = document.getElementById('collegeName').value;
                    const graduationYear = document.getElementById('graduationYear').value;
                    const branch = document.getElementById('branch').value;
                    
                    // Password confirmation check
                    if (password !== confirmPassword) {
                        showToast('Passwords do not match!', 'error');
                        return;
                    }
                    
                    // Simulate registration process
                    const submitBtn = this.querySelector('button[type="submit"]');
                    const originalText = submitBtn.textContent;
                    
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Registering...';
                    
                    setTimeout(() => {
                        // Create user object
                        currentUser = {
                            id: Date.now(),
                            firstName: firstName,
                            lastName: lastName,
                            email: email,
                            college: college,
                            graduationYear: graduationYear,
                            branch: branch,
                            profileImage: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80'
                        };
                        
                        // Create a basic profile for the user
                        userProfile = {
                            id: Date.now() + 1,
                            userId: currentUser.id,
                            name: `${currentUser.firstName} ${currentUser.lastName}`,
                            branch: currentUser.branch.toLowerCase(),
                            year: currentUser.graduationYear,
                            college: currentUser.college,
                            email: currentUser.email,
                            image: currentUser.profileImage,
                            skills: [],
                            experience: [],
                            social: {},
                            availableForMentoring: false,
                            hiring: false,
                            profileVisibility: true,
                            connections: [],
                            profileViews: 0
                        };
                        
                        // Save user profiles
                        const userProfiles = JSON.parse(localStorage.getItem('userProfiles')) || [];
                        userProfiles.push(userProfile);
                        localStorage.setItem('userProfiles', JSON.stringify(userProfiles));
                        
                        // Add to alumni data
                        alumniData.push(userProfile);
                        localStorage.setItem('alumniData', JSON.stringify(alumniData));
                        
                        // Save to localStorage
                        localStorage.setItem('currentUser', JSON.stringify(currentUser));
                        
                        // Hide modal
                        bootstrap.Modal.getInstance(document.getElementById('registerModal')).hide();
                        
                        // Show application
                        showApplication();
                        
                        // Show success message
                        showToast('Registration successful! Welcome to Alumni Connect.');
                        
                        submitBtn.disabled = false;
                        submitBtn.textContent = originalText;
                    }, 1500);
                });
                
                // Logout functionality
                document.getElementById('logoutBtn').addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Clear user data
                    localStorage.removeItem('currentUser');
                    currentUser = null;
                    userProfile = null;
                    
                    // Show login screen
                    document.getElementById('authContainer').style.display = 'flex';
                    document.getElementById('mainApplication').style.display = 'none';
                    
                    // Show success message
                    showToast('You have been logged out successfully.');
                });
            }
            
            // Load featured alumni on home page
            function loadFeaturedAlumni() {
                const container = document.getElementById('featuredAlumni');
                container.innerHTML = '';
                
                // Get 3 random alumni for featured section
                const featuredAlumni = [...alumniData].sort(() => 0.5 - Math.random()).slice(0, 3);
                
                featuredAlumni.forEach(alumni => {
                    const col = document.createElement('div');
                    col.className = 'col-md-4 mb-4';
                    
                    col.innerHTML = `
                        <div class="card alumni-card ${alumni.branch} h-100">
                            <div class="card-body text-center">
                                <img src="${alumni.image}" alt="${alumni.name}" class="alumni-img mb-3">
                                <span class="branch-badge">${getBranchName(alumni.branch)}</span>
                                <h5 class="card-title">${alumni.name}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">${alumni.position || 'Alumni'} at ${alumni.company || alumni.college}</h6>
                                <p class="card-text small">${alumni.college}, ${alumni.year}</p>
                                
                                <div class="social-links mb-3">
                                    ${alumni.social && alumni.social.linkedin ? `<a href="${alumni.social.linkedin}" target="_blank"><i class="fab fa-linkedin"></i></a>` : ''}
                                    ${alumni.social && alumni.social.twitter ? `<a href="${alumni.social.twitter}" target="_blank"><i class="fab fa-twitter"></i></a>` : ''}
                                </div>
                                
                                <button class="btn btn-outline-primary btn-sm view-profile" data-id="${alumni.id}">
                                    View Profile
                                </button>
                            </div>
                        </div>
                    `;
                    
                    container.appendChild(col);
                });
                
                // Add event listeners to view profile buttons
                document.querySelectorAll('.view-profile').forEach(button => {
                    button.addEventListener('click', function() {
                        const alumniId = this.getAttribute('data-id');
                        showAlumniDetails(alumniId);
                    });
                });
            }
            
            // Load alumni data into the directory page
            function loadAlumniData() {
                const container = document.getElementById('alumniContainer');
                container.innerHTML = '';
                
                // Apply filters
                let filteredAlumni = alumniData.filter(alumni => {
                    // Skip if profile is not visible
                    if (!alumni.profileVisibility) return false;
                    
                    // Branch filter
                    if (activeFilters.branch.length > 0 && !activeFilters.branch.includes(alumni.branch)) {
                        return false;
                    }
                    
                    // Year filter
                    if (activeFilters.year && alumni.year !== activeFilters.year) {
                        return false;
                    }
                    
                    // Location filter
                    if (activeFilters.location && !alumni.location.toLowerCase().includes(activeFilters.location.toLowerCase())) {
                        return false;
                    }
                    
                    // Company filter
                    if (activeFilters.company && !alumni.company.toLowerCase().includes(activeFilters.company.toLowerCase())) {
                        return false;
                    }
                    
                    // Skills filter
                    if (activeFilters.skills.length > 0) {
                        const hasSkill = activeFilters.skills.some(skill => 
                            alumni.skills.some(s => s.toLowerCase().includes(skill.toLowerCase()))
                        );
                        if (!hasSkill) return false;
                    }
                    
                    // Mentoring filter
                    if (activeFilters.mentoring && !alumni.availableForMentoring) {
                        return false;
                    }
                    
                    // Hiring filter
                    if (activeFilters.hiring && !alumni.hiring) {
                        return false;
                    }
                    
                    return true;
                });
                
                // Display message if no results
                if (filteredAlumni.length === 0) {
                    container.innerHTML = `
                        <div class="col-12 text-center py-5">
                            <i class="fas fa-search fa-3x mb-3 text-muted"></i>
                            <h4>No alumni found</h4>
                            <p class="text-muted">Try adjusting your filters or search query</p>
                            <button class="btn btn-primary mt-2" id="resetFiltersBtn">Reset All Filters</button>
                        </div>
                    `;
                    
                    document.getElementById('resetFiltersBtn').addEventListener('click', resetAllFilters);
                    return;
                }
                
                // Render alumni cards
                filteredAlumni.forEach(alumni => {
                    const isConnected = userProfile && userProfile.connections && userProfile.connections.includes(alumni.id);
                    
                    const card = document.createElement('div');
                    card.className = `col-md-6 col-lg-4 mb-4 alumni-item ${currentView === 'list' ? 'd-flex' : ''}`;
                    
                    card.innerHTML = `
                        <div class="card alumni-card ${alumni.branch} ${currentView === 'list' ? 'flex-row' : ''}">
                            ${isConnected ? '<span class="connection-status">Connected</span>' : ''}
                            
                            ${currentView === 'list' ? `
                                <div class="col-4">
                                    <img src="${alumni.image}" alt="${alumni.name}" class="card-img-top rounded-start" style="height: 100%; object-fit: cover;">
                                </div>
                                <div class="col-8">
                            ` : ''}
                            
                            <div class="card-body ${currentView === 'list' ? 'py-2' : 'text-center'}">
                                ${currentView === 'grid' ? `
                                    <img src="${alumni.image}" alt="${alumni.name}" class="alumni-img mb-3">
                                ` : ''}
                                
                                <span class="branch-badge">${getBranchName(alumni.branch)}</span>
                                
                                <h5 class="card-title ${currentView === 'list' ? 'h6' : ''}">${alumni.name}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">${alumni.position || 'Alumni'} at ${alumni.company || alumni.college}</h6>
                                
                                <p class="card-text small ${currentView === 'grid' ? 'd-none' : ''}">${alumni.college}, ${alumni.year}</p>
                                
                                <div class="social-links mb-2">
                                    ${alumni.social && alumni.social.linkedin ? `<a href="${alumni.social.linkedin}" target="_blank"><i class="fab fa-linkedin"></i></a>` : ''}
                                    ${alumni.social && alumni.social.twitter ? `<a href="${alumni.social.twitter}" target="_blank"><i class="fab fa-twitter"></i></a>` : ''}
                                    ${alumni.social && alumni.social.github ? `<a href="${alumni.social.github}" target="_blank"><i class="fab fa-github"></i></a>` : ''}
                                    ${alumni.social && alumni.social.website ? `<a href="${alumni.social.website}" target="_blank"><i class="fas fa-globe"></i></a>` : ''}
                                </div>
                                
                                <div class="d-flex justify-content-between">
                                    <button class="btn btn-outline-primary btn-sm view-profile" data-id="${alumni.id}">
                                        View Profile
                                    </button>
                                    ${!isConnected ? `
                                        <button class="btn btn-outline-secondary btn-sm connect-btn" data-id="${alumni.id}">
                                            <i class="fas fa-link"></i>
                                        </button>
                                    ` : ''}
                                </div>
                            </div>
                            
                            ${currentView === 'list' ? '</div>' : ''}
                        </div>
                    `;
                    
                    container.appendChild(card);
                });
                
                // Add event listeners to view profile buttons
                document.querySelectorAll('.view-profile').forEach(button => {
                    button.addEventListener('click', function() {
                        const alumniId = this.getAttribute('data-id');
                        showAlumniDetails(alumniId);
                    });
                });
                
                // Add event listeners to connect buttons
                document.querySelectorAll('.connect-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const alumniId = this.getAttribute('data-id');
                        sendConnectionRequest(alumniId);
                    });
                });
            }
            
            // Send connection request
            function sendConnectionRequest(alumniId) {
                if (!currentUser) {
                    showToast('Please log in to send connection requests', 'error');
                    return;
                }
                
                const alumni = alumniData.find(a => a.id == alumniId);
                if (!alumni) return;
                
                // Create notification
                const notifications = JSON.parse(localStorage.getItem('notifications')) || [];
                notifications.push({
                    id: Date.now(),
                    userId: alumni.userId || alumni.id,
                    type: 'connection_request',
                    message: `${currentUser.firstName} ${currentUser.lastName} wants to connect with you`,
                    timestamp: new Date().toISOString(),
                    read: false,
                    relatedUserId: currentUser.id
                });
                
                localStorage.setItem('notifications', JSON.stringify(notifications));
                
                showToast(`Connection request sent to ${alumni.name}`);
            }
            
            // Get branch name from branch key
            function getBranchName(branchKey) {
                const branches = {
                    'civil': 'Civil Eng',
                    'cse': 'Computer Science',
                    'electrical': 'Electrical Eng',
                    'mechanical': 'Mechanical Eng',
                    'business': 'Business',
                    'medical': 'Medical',
                    'arts': 'Arts & Design'
                };
                return branches[branchKey] || branchKey;
            }
            
            // Get branch color from branch key
            function getBranchColor(branchKey) {
                const colors = {
                    'civil': 'var(--civil)',
                    'cse': 'var(--cse)',
                    'electrical': 'var(--electrical)',
                    'mechanical': 'var(--mechanical)',
                    'business': 'var(--business)',
                    'medical': 'var(--medical)',
                    'arts': 'var(--arts)'
                };
                return colors[branchKey] || 'var(--primary)';
            }
            
            // Show alumni details in modal
            function showAlumniDetails(alumniId) {
                const alumni = alumniData.find(a => a.id == alumniId);
                if (!alumni) return;
                
                // Set modal content
                document.getElementById('alumniName').textContent = alumni.name;
                document.getElementById('modalAlumniImg').src = alumni.image;
                document.getElementById('modalBranchBadge').textContent = getBranchName(alumni.branch);
                document.getElementById('modalBranchBadge').style.backgroundColor = getBranchColor(alumni.branch);
                document.getElementById('modalAbout').textContent = alumni.about || 'No information available';
                document.getElementById('modalEmail').textContent = alumni.email || 'Not provided';
                document.getElementById('modalPhone').textContent = alumni.phone || 'Not provided';
                document.getElementById('modalLocation').textContent = alumni.location || 'Not provided';
                document.getElementById('modalDegree').textContent = alumni.degree || 'Not provided';
                document.getElementById('modalCollege').textContent = alumni.college || 'Not provided';
                document.getElementById('modalYear').textContent = alumni.year || 'Not provided';
                
                // Set social links
                const socialLinksContainer = document.getElementById('modalSocialLinks');
                socialLinksContainer.innerHTML = '';
                
                if (alumni.social && alumni.social.linkedin) {
                    socialLinksContainer.innerHTML += `<a href="${alumni.social.linkedin}" target="_blank"><i class="fab fa-linkedin fa-lg"></i></a>`;
                }
                if (alumni.social && alumni.social.twitter) {
                    socialLinksContainer.innerHTML += `<a href="${alumni.social.twitter}" target="_blank"><i class="fab fa-twitter fa-lg"></i></a>`;
                }
                if (alumni.social && alumni.social.github) {
                    socialLinksContainer.innerHTML += `<a href="${alumni.social.github}" target="_blank"><i class="fab fa-github fa-lg"></i></a>`;
                }
                if (alumni.social && alumni.social.website) {
                    socialLinksContainer.innerHTML += `<a href="${alumni.social.website}" target="_blank"><i class="fas fa-globe fa-lg"></i></a>`;
                }
                
                // Set experience
                const experienceContainer = document.getElementById('modalExperience');
                experienceContainer.innerHTML = '';
                
                if (alumni.experience && alumni.experience.length > 0) {
                    alumni.experience.forEach(exp => {
                        experienceContainer.innerHTML += `
                            <div class="d-flex justify-content-between align-items-start py-2 border-bottom">
                                <div>
                                    <h6 class="mb-0">${exp.position}</h6>
                                    <p class="mb-0 text-muted">${exp.company}</p>
                                    <p class="mb-0 small">${exp.description}</p>
                                </div>
                                <span class="text-muted">${exp.duration}</span>
                            </div>
                        `;
                    });
                } else {
                    experienceContainer.innerHTML = '<p class="text-muted">No experience information available</p>';
                }
                
                // Set skills
                const skillsContainer = document.getElementById('modalSkills');
                skillsContainer.innerHTML = '';
                
                if (alumni.skills && alumni.skills.length > 0) {
                    alumni.skills.forEach(skill => {
                        skillsContainer.innerHTML += `<span class="skill-badge">${skill}</span>`;
                    });
                } else {
                    skillsContainer.innerHTML = '<p class="text-muted">No skills information available</p>';
                }
                
                // Set up connection button
                const isConnected = userProfile && userProfile.connections && userProfile.connections.includes(alumni.id);
                const modalConnectBtn = document.getElementById('modalConnectBtn');
                
                if (isConnected) {
                    modalConnectBtn.innerHTML = '<i class="fas fa-check"></i> Connected';
                    modalConnectBtn.disabled = true;
                    modalConnectBtn.classList.remove('btn-outline-primary');
                    modalConnectBtn.classList.add('btn-success');
                } else {
                    modalConnectBtn.innerHTML = '<i class="fas fa-link"></i> Connect';
                    modalConnectBtn.disabled = false;
                    modalConnectBtn.classList.remove('btn-success');
                    modalConnectBtn.classList.add('btn-outline-primary');
                    modalConnectBtn.onclick = function() {
                        sendConnectionRequest(alumni.id);
                        bootstrap.Modal.getInstance(document.getElementById('profileModal')).hide();
                    };
                }
                
                // Set up message button
                document.getElementById('modalMessageBtn').onclick = function() {
                    if (!currentUser) {
                        showToast('Please log in to send messages', 'error');
                        return;
                    }
                    
                    if (!isConnected) {
                        showToast('You need to connect before sending messages', 'error');
                        return;
                    }
                    
                    showToast('Message feature coming soon!');
                };
                
                // Show modal
                const modal = new bootstrap.Modal(document.getElementById('profileModal'));
                modal.show();
                
                // Increment profile views
                if (alumni.userId && alumni.userId !== currentUser.id) {
                    alumni.profileViews = (alumni.profileViews || 0) + 1;
                    localStorage.setItem('alumniData', JSON.stringify(alumniData));
                }
            }
            
            // Setup page navigation
            function setupPageNavigation() {
                document.querySelectorAll('[data-page]').forEach(link => {
                    link.addEventListener('click', function(e) {
                        e.preventDefault();
                        const pageId = this.getAttribute('data-page');
                        showPage(pageId);
                    });
                });
            }
            
            // Show specific page
            function showPage(pageId) {
                // Hide all pages
                document.querySelectorAll('.page').forEach(page => {
                    page.classList.add('d-none');
                });
                
                // Show selected page
                document.getElementById(`${pageId}-page`).classList.remove('d-none');
                
                // Update active nav link
                document.querySelectorAll('.nav-link').forEach(navLink => {
                    navLink.classList.remove('active');
                });
                
                document.querySelectorAll(`[data-page="${pageId}"]`).forEach(link => {
                    link.classList.add('active');
                });
                
                // Load data for specific pages
                if (pageId === 'directory') {
                    loadAlumniData();
                } else if (pageId === 'dashboard') {
                    updateDashboardStats();
                } else if (pageId === 'connections') {
                    loadConnections();
                } else if (pageId === 'profile') {
                    loadUserProfile();
                }
                
                // Scroll to top
                window.scrollTo(0, 0);
            }
            
            // Load user profile
            function loadUserProfile() {
                if (!userProfile) return;
                
                document.getElementById('profileUserName').textContent = userProfile.name;
                document.getElementById('profileUserTitle').textContent = userProfile.position ? `${userProfile.position} at ${userProfile.company}` : 'Alumni';
                document.getElementById('profileAbout').textContent = userProfile.about || 'No information available. Click edit to update your profile.';
                
                // Load experience
                const experienceContainer = document.getElementById('profileExperience');
                experienceContainer.innerHTML = '';
                
                if (userProfile.experience && userProfile.experience.length > 0) {
                    userProfile.experience.forEach(exp => {
                        experienceContainer.innerHTML += `
                            <div class="d-flex justify-content-between align-items-start py-2 border-bottom">
                                <div>
                                    <h6 class="mb-0">${exp.position}</h6>
                                    <p class="mb-0 text-muted">${exp.company}</p>
                                    <p class="mb-0 small">${exp.description}</p>
                                </div>
                                <span class="text-muted">${exp.duration}</span>
                            </div>
                        `;
                    });
                } else {
                    experienceContainer.innerHTML = '<p class="text-muted">No experience information added</p>';
                }
                
                // Load education
                const educationContainer = document.getElementById('profileEducation');
                educationContainer.innerHTML = '';
                
                if (userProfile.college) {
                    educationContainer.innerHTML += `
                        <div class="d-flex justify-content-between align-items-start py-2 border-bottom">
                            <div>
                                <h6 class="mb-0">${userProfile.degree || 'Degree'}</h6>
                                <p class="mb-0 text-muted">${userProfile.college}</p>
                            </div>
                            <span class="text-muted">${userProfile.year}</span>
                        </div>
                    `;
                } else {
                    educationContainer.innerHTML = '<p class="text-muted">No education information added</p>';
                }
                
                // Load skills
                const skillsContainer = document.getElementById('profileSkills');
                skillsContainer.innerHTML = '';
                
                if (userProfile.skills && userProfile.skills.length > 0) {
                    userProfile.skills.forEach(skill => {
                        skillsContainer.innerHTML += `<span class="skill-badge">${skill}</span>`;
                    });
                } else {
                    skillsContainer.innerHTML = '<p class="text-muted">No skills added</p>';
                }
            }
            
            // Load connections
            function loadConnections() {
                const container = document.getElementById('connectionsContainer');
                container.innerHTML = '';
                
                if (!userProfile || !userProfile.connections || userProfile.connections.length === 0) {
                    container.innerHTML = `
                        <div class="col-12 text-center py-5">
                            <i class="fas fa-users fa-3x mb-3 text-muted"></i>
                            <h4>No connections yet</h4>
                            <p class="text-muted">Connect with other alumni to build your network</p>
                            <button class="btn btn-primary mt-2" data-page="directory">Browse Alumni</button>
                        </div>
                    `;
                    return;
                }
                
                userProfile.connections.forEach(connectionId => {
                    const alumni = alumniData.find(a => a.id === connectionId);
                    if (!alumni) return;
                    
                    const col = document.createElement('div');
                    col.className = 'col-md-6 col-lg-4 mb-4';
                    
                    col.innerHTML = `
                        <div class="card alumni-card ${alumni.branch} h-100">
                            <span class="connection-status">Connected</span>
                            <div class="card-body text-center">
                                <img src="${alumni.image}" alt="${alumni.name}" class="alumni-img mb-3">
                                <span class="branch-badge">${getBranchName(alumni.branch)}</span>
                                <h5 class="card-title">${alumni.name}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">${alumni.position || 'Alumni'} at ${alumni.company || alumni.college}</h6>
                                <p class="card-text small">${alumni.college}, ${alumni.year}</p>
                                
                                <div class="social-links mb-3">
                                    ${alumni.social && alumni.social.linkedin ? `<a href="${alumni.social.linkedin}" target="_blank"><i class="fab fa-linkedin"></i></a>` : ''}
                                    ${alumni.social && alumni.social.twitter ? `<a href="${alumni.social.twitter}" target="_blank"><i class="fab fa-twitter"></i></a>` : ''}
                                </div>
                                
                                <div class="d-flex justify-content-between">
                                    <button class="btn btn-outline-primary btn-sm view-profile" data-id="${alumni.id}">
                                        View Profile
                                    </button>
                                    <button class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-envelope"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    `;
                    
                    container.appendChild(col);
                });
                
                // Add event listeners to view profile buttons
                document.querySelectorAll('.view-profile').forEach(button => {
                    button.addEventListener('click', function() {
                        const alumniId = this.getAttribute('data-id');
                        showAlumniDetails(alumniId);
                    });
                });
            }
            
            // Load connection suggestions
            function loadConnectionSuggestions() {
                const container = document.getElementById('connectionSuggestions');
                container.innerHTML = '';
                
                if (!userProfile) return;
                
                // Get alumni from same branch or college
                const suggestions = alumniData.filter(alumni => {
                    // Exclude current user and existing connections
                    if (alumni.userId === currentUser.id) return false;
                    if (userProfile.connections && userProfile.connections.includes(alumni.id)) return false;
                    
                    // Suggest based on same branch or college
                    return alumni.branch === userProfile.branch || alumni.college === userProfile.college;
                }).slice(0, 3);
                
                if (suggestions.length === 0) {
                    container.innerHTML = '<p class="text-muted">No suggestions available</p>';
                    return;
                }
                
                suggestions.forEach(alumni => {
                    const div = document.createElement('div');
                    div.className = 'd-flex align-items-start mb-3';
                    
                    div.innerHTML = `
                        <img src="${alumni.image}" class="rounded-circle me-3" width="40" height="40" alt="${alumni.name}">
                        <div class="flex-grow-1">
                            <h6 class="mb-0">${alumni.name}</h6>
                            <p class="text-muted mb-0 small">${alumni.position || 'Alumni'} at ${alumni.company || alumni.college}</p>
                            <p class="small mb-0">${alumni.college}, ${alumni.year}</p>
                        </div>
                        <button class="btn btn-sm btn-outline-primary connect-btn" data-id="${alumni.id}">
                            <i class="fas fa-link"></i>
                        </button>
                    `;
                    
                    container.appendChild(div);
                });
                
                // Add event listeners to connect buttons
                document.querySelectorAll('.connect-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const alumniId = this.getAttribute('data-id');
                        sendConnectionRequest(alumniId);
                    });
                });
            }
            
            // Load upcoming events
            function loadUpcomingEvents() {
                const container = document.getElementById('upcomingEvents');
                container.innerHTML = '';
                
                // Sample events
                const events = [
                    { name: 'Annual Alumni Meet 2023', date: 'Sept 15, 2023', location: 'Virtual Event' },
                    { name: 'Industry-Academia Conclave', date: 'Oct 28, 2023', location: 'New York, USA' },
                    { name: 'Tech Innovation Summit', date: 'Nov 12, 2023', location: 'San Francisco, USA' }
                ];
                
                events.forEach(event => {
                    const div = document.createElement('div');
                    div.className = 'd-flex align-items-start mb-3';
                    
                    div.innerHTML = `
                        <div class="bg-primary text-white rounded p-2 me-3">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-0">${event.name}</h6>
                            <p class="text-muted mb-0 small">${event.date} • ${event.location}</p>
                        </div>
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-plus"></i>
                        </button>
                    `;
                    
                    container.appendChild(div);
                });
            }
            
            // Load recent activity
            function loadRecentActivity() {
                const container = document.getElementById('recentActivity');
                container.innerHTML = '';
                
                // Sample activity
                const activities = [
                    { user: 'Rahul Sharma', action: 'updated his profile', time: '2 hours ago' },
                    { user: 'Priya Patel', action: 'posted a new job opportunity', time: '5 hours ago' },
                    { user: 'Sanjay Mehta', action: 'registered for the upcoming event', time: 'Yesterday' }
                ];
                
                activities.forEach(activity => {
                    const div = document.createElement('div');
                    div.className = 'd-flex align-items-start mb-3';
                    
                    div.innerHTML = `
                        <div class="bg-light rounded p-2 me-3">
                            <i class="fas fa-user text-primary"></i>
                        </div>
                        <div class="flex-grow-1">
                            <p class="mb-0">${activity.user} ${activity.action}</p>
                            <p class="text-muted mb-0 small">${activity.time}</p>
                        </div>
                    `;
                    
                    container.appendChild(div);
                });
            }
            
            // Load job recommendations
            function loadJobRecommendations() {
                const container = document.getElementById('jobRecommendations');
                container.innerHTML = '';
                
                // Sample jobs
                const jobs = [
                    { title: 'Software Development Engineer', company: 'Amazon', postedBy: 'Neha Verma' },
                    { title: 'Civil Project Manager', company: 'Shapoorji Pallonji', postedBy: 'Amit Shah' },
                    { title: 'Data Scientist', company: 'Google', postedBy: 'Rajesh Kumar' }
                ];
                
                jobs.forEach(job => {
                    const div = document.createElement('div');
                    div.className = 'mb-3';
                    
                    div.innerHTML = `
                        <h6 class="mb-0">${job.title}</h6>
                        <p class="text-muted mb-0">${job.company} • Posted by: ${job.postedBy}</p>
                        <button class="btn btn-sm btn-outline-primary mt-1">Apply Now</button>
                    `;
                    
                    container.appendChild(div);
                });
            }
            
            // Setup event listeners
            function setupEventListeners() {
                // Advanced search toggle
                document.getElementById('advancedSearchToggle').addEventListener('click', function() {
                    const tools = document.getElementById('advancedSearchTools');
                    tools.classList.toggle('d-none');
                    this.innerHTML = tools.classList.contains('d-none') ? 
                        '<i class="fas fa-sliders-h"></i> Advanced Search' : 
                        '<i class="fas fa-times"></i> Close Search';
                });
                
                // Apply filters button
                document.getElementById('applyFilters').addEventListener('click', function() {
                    // Get filter values
                    activeFilters.branch = [document.getElementById('branchFilter').value].filter(Boolean);
                    activeFilters.year = document.getElementById('yearFilter').value;
                    activeFilters.location = document.getElementById('locationFilter').value;
                    activeFilters.company = document.getElementById('companyFilter').value;
                    activeFilters.skills = Array.from(document.getElementById('skillsFilter').selectedOptions).map(opt => opt.value);
                    activeFilters.mentoring = document.getElementById('availableForMentoring').checked;
                    activeFilters.hiring = document.getElementById('hiring').checked;
                    
                    updateActiveFiltersDisplay();
                    loadAlumniData();
                    
                    // Show toast notification
                    showToast('Filters applied successfully');
                });
                
                // Clear filters button
                document.getElementById('clearFilters').addEventListener('click', resetAllFilters);
                
                // Quick filters
                document.getElementById('applyQuickFilters').addEventListener('click', function() {
                    // Get selected branches
                    activeFilters.branch = Array.from(document.querySelectorAll('.branch-filter:checked')).map(cb => cb.value);
                    
                    // Get other filters
                    activeFilters.year = document.getElementById('yearQuickFilter').value;
                    activeFilters.location = document.getElementById('locationQuickFilter').value;
                    
                    updateActiveFiltersDisplay();
                    loadAlumniData();
                    
                    // Show toast notification
                    showToast('Filters applied successfully');
                });
                
                // Search input
                document.getElementById('searchButton').addEventListener('click', performSearch);
                document.getElementById('searchInput').addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        performSearch();
                    }
                });
                
                // View options
                document.querySelectorAll('.view-option').forEach(option => {
                    option.addEventListener('click', function(e) {
                        e.preventDefault();
                        
                        // Update active view
                        document.querySelectorAll('.view-option').forEach(opt => opt.classList.remove('active'));
                        this.classList.add('active');
                        
                        currentView = this.getAttribute('data-view');
                        loadAlumniData();
                    });
                });
                
                // Add profile button
                document.getElementById('addProfileBtn').addEventListener('click', function() {
                    if (!currentUser) {
                        showToast('Please log in to add a profile', 'error');
                        return;
                    }
                    
                    const addProfileModal = new bootstrap.Modal(document.getElementById('addProfileModal'));
                    addProfileModal.show();
                });
                
                // Submit profile button
                document.getElementById('submitProfileBtn').addEventListener('click', function() {
                    // Get form values
                    const firstName = document.getElementById('profileFirstName').value;
                    const lastName = document.getElementById('profileLastName').value;
                    const email = document.getElementById('profileEmail').value;
                    const phone = document.getElementById('profilePhone').value;
                    const location = document.getElementById('profileLocation').value;
                    const branch = document.getElementById('profileBranch').value;
                    const about = document.getElementById('profileAbout').value;
                    const image = document.getElementById('profileImage').value;
                    const college = document.getElementById('profileCollege').value;
                    const degree = document.getElementById('profileDegree').value;
                    const graduationYear = document.getElementById('profileGraduationYear').value;
                    const company = document.getElementById('profileCompany').value;
                    const position = document.getElementById('profilePosition').value;
                    const availableForMentoring = document.getElementById('profileAvailableForMentoring').checked;
                    const hiring = document.getElementById('profileHiring').checked;
                    const skills = document.getElementById('profileSkillsInput').value.split(',').map(s => s.trim()).filter(Boolean);
                    const linkedin = document.getElementById('profileLinkedIn').value;
                    const twitter = document.getElementById('profileTwitter').value;
                    const github = document.getElementById('profileGitHub').value;
                    const website = document.getElementById('profileWebsite').value;
                    const visibility = document.getElementById('profileVisibility').checked;
                    
                    // Validate required fields
                    if (!firstName || !lastName || !email || !branch || !college || !degree || !graduationYear) {
                        showToast('Please fill in all required fields', 'error');
                        return;
                    }
                    
                    // Create alumni profile
                    const newProfile = {
                        id: Date.now(),
                        userId: currentUser.id,
                        name: `${firstName} ${lastName}`,
                        branch: branch,
                        year: graduationYear,
                        company: company,
                        position: position,
                        image: image || 'https://via.placeholder.com/200/1a4d8c/ffffff?text=Profile',
                        college: college,
                        degree: degree,
                        email: email,
                        phone: phone,
                        location: location,
                        about: about,
                        skills: skills,
                        experience: [], // Would be populated from the experience tab in a real implementation
                        social: {
                            linkedin: linkedin,
                            twitter: twitter,
                            github: github,
                            website: website
                        },
                        availableForMentoring: availableForMentoring,
                        hiring: hiring,
                        profileVisibility: visibility,
                        connections: [],
                        profileViews: 0
                    };
                    
                    // Add to alumni data
                    alumniData.push(newProfile);
                    localStorage.setItem('alumniData', JSON.stringify(alumniData));
                    
                    // Update user profile
                    userProfile = newProfile;
                    const userProfiles = JSON.parse(localStorage.getItem('userProfiles')) || [];
                    userProfiles.push(newProfile);
                    localStorage.setItem('userProfiles', JSON.stringify(userProfiles));
                    
                    // Hide modal
                    bootstrap.Modal.getInstance(document.getElementById('addProfileModal')).hide();
                    
                    // Show success message
                    showToast('Profile created successfully!');
                    
                    // Reload alumni data if on directory page
                    if (document.getElementById('directory-page').classList.contains('d-none') === false) {
                        loadAlumniData();
                    }
                });
            }
            
            // Perform search
            function performSearch() {
                const query = document.getElementById('searchInput').value.toLowerCase().trim();
                
                if (!query) {
                    loadAlumniData();
                    return;
                }
                
                // Filter alumni based on search query
                const filteredAlumni = alumniData.filter(alumni => {
                    return (
                        alumni.name.toLowerCase().includes(query) ||
                        (alumni.company && alumni.company.toLowerCase().includes(query)) ||
                        (alumni.position && alumni.position.toLowerCase().includes(query)) ||
                        (alumni.skills && alumni.skills.some(skill => skill.toLowerCase().includes(query))) ||
                        alumni.college.toLowerCase().includes(query)
                    );
                });
                
                // Display results
                const container = document.getElementById('alumniContainer');
                container.innerHTML = '';
                
                if (filteredAlumni.length === 0) {
                    container.innerHTML = `
                        <div class="col-12 text-center py-5">
                            <i class="fas fa-search fa-3x mb-3 text-muted"></i>
                            <h4>No results found for "${query}"</h4>
                            <p class="text-muted">Try different search terms</p>
                        </div>
                    `;
                    return;
                }
                
                // Render search results
                filteredAlumni.forEach(alumni => {
                    const isConnected = userProfile && userProfile.connections && userProfile.connections.includes(alumni.id);
                    
                    const card = document.createElement('div');
                    card.className = `col-md-6 col-lg-4 mb-4 alumni-item`;
                    
                    card.innerHTML = `
                        <div class="card alumni-card ${alumni.branch}">
                            ${isConnected ? '<span class="connection-status">Connected</span>' : ''}
                            <div class="card-body text-center">
                                <img src="${alumni.image}" alt="${alumni.name}" class="alumni-img mb-3">
                                <span class="branch-badge">${getBranchName(alumni.branch)}</span>
                                <h5 class="card-title">${alumni.name}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">${alumni.position || 'Alumni'} at ${alumni.company || alumni.college}</h6>
                                
                                <div class="social-links mb-2">
                                    ${alumni.social && alumni.social.linkedin ? `<a href="${alumni.social.linkedin}" target="_blank"><i class="fab fa-linkedin"></i></a>` : ''}
                                    ${alumni.social && alumni.social.twitter ? `<a href="${alumni.social.twitter}" target="_blank"><i class="fab fa-twitter"></i></a>` : ''}
                                </div>
                                
                                <button class="btn btn-outline-primary btn-sm view-profile" data-id="${alumni.id}">
                                    View Profile
                                </button>
                            </div>
                        </div>
                    `;
                    
                    container.appendChild(card);
                });
                
                // Add event listeners to view profile buttons
                document.querySelectorAll('.view-profile').forEach(button => {
                    button.addEventListener('click', function() {
                        const alumniId = this.getAttribute('data-id');
                        showAlumniDetails(alumniId);
                    });
                });
                
                // Show toast notification
                showToast(`Found ${filteredAlumni.length} results for "${query}"`);
            }
            
            // Update active filters display
            function updateActiveFiltersDisplay() {
                const container = document.getElementById('activeFilters');
                container.innerHTML = '';
                
                // Branch filters
                activeFilters.branch.forEach(branch => {
                    container.innerHTML += `<span class="badge bg-primary me-1">${getBranchName(branch)}</span>`;
                });
                
                // Year filter
                if (activeFilters.year) {
                    container.innerHTML += `<span class="badge bg-info me-1">Year: ${activeFilters.year}</span>`;
                }
                
                // Location filter
                if (activeFilters.location) {
                    container.innerHTML += `<span class="badge bg-warning me-1">Location: ${activeFilters.location}</span>`;
                }
                
                // Company filter
                if (activeFilters.company) {
                    container.innerHTML += `<span class="badge bg-success me-1">Company: ${activeFilters.company}</span>`;
                }
                
                // Skills filters
                activeFilters.skills.forEach(skill => {
                    container.innerHTML += `<span class="badge bg-secondary me-1">Skill: ${skill}</span>`;
                });
                
                // Mentoring filter
                if (activeFilters.mentoring) {
                    container.innerHTML += `<span class="badge bg-dark me-1">Available for Mentoring</span>`;
                }
                
                // Hiring filter
                if (activeFilters.hiring) {
                    container.innerHTML += `<span class="badge bg-danger me-1">Currently Hiring</span>`;
                }
            }
            
            // Reset all filters
            function resetAllFilters() {
                activeFilters = {
                    branch: [],
                    year: '',
                    location: '',
                    company: '',
                    skills: [],
                    mentoring: false,
                    hiring: false
                };
                
                // Reset form elements
                document.querySelectorAll('.branch-filter').forEach(cb => cb.checked = false);
                document.getElementById('yearFilter').value = '';
                document.getElementById('locationFilter').value = '';
                document.getElementById('companyFilter').value = '';
                document.getElementById('skillsFilter').selectedIndex = -1;
                document.getElementById('availableForMentoring').checked = false;
                document.getElementById('hiring').checked = false;
                
                document.getElementById('yearQuickFilter').value = '';
                document.getElementById('locationQuickFilter').value = '';
                
                updateActiveFiltersDisplay();
                loadAlumniData();
                
                // Show toast notification
                showToast('All filters cleared');
            }
            
            // Show toast notification
            function showToast(message, type = 'success') {
                const toast = document.createElement('div');
                toast.className = `toast ${type}`;
                toast.innerHTML = `
                    <div class="toast-body">
                        <div class="d-flex justify-content-between">
                            <div>${message}</div>
                            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                        </div>
                    </div>
                `;
                
                document.querySelector('.toast-container').appendChild(toast);
                
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();
                
                // Remove toast after it hides
                toast.addEventListener('hidden.bs.toast', () => {
                    toast.remove();
                });
            }
            
            // Initialize the application
            initApplication();
        });
    </script>
</body>
</html>
