                        twitter: "https://twitter.com/rajeshkhanna",
                        github: null,
                        website: "https://rajeshkhanna.design"
                    },
                    availableForMentoring: true,
                    hiring: false
                }
            ];
            
            // Current view and filters
            let currentView = 'grid';
            let activeFilters = {
                branch: [],
                year: '',
                location: '',
                company: '',
                skills: [],
                mentoring: false,
                hiring: false
            };
            
            // Current user state
            let currentUser = null;
            
            // Check if user is logged in (from localStorage)
            function checkLoginStatus() {
                const userData = localStorage.getItem('currentUser');
                if (userData) {
                    currentUser = JSON.parse(userData);
                    showApplication();
                }
            }
            
            // Show the application content
            function showApplication() {
                document.getElementById('authContainer').style.display = 'none';
                document.getElementById('mainApplication').style.display = 'block';
                
                updateUIForLoggedInUser();
                loadFeaturedAlumni();
                
                // Show home page by default
                showPage('home');
            }
            
            // Update UI when user logs in
            function updateUIForLoggedInUser() {
                if (currentUser) {
                    document.getElementById('username').textContent = currentUser.firstName;
                }
            }
            
            // Initialize the application
            function initApplication() {
                checkLoginStatus();
                setupAuth();
                setupPageNavigation();
                setupEventListeners();
            }
            
            // Setup authentication
            function setupAuth() {
                // Show register modal
                document.getElementById('showRegister').addEventListener('click', function(e) {
                    e.preventDefault();
                    const registerModal = new bootstrap.Modal(document.getElementById('registerModal'));
                    registerModal.show();
                });
                
                // Login form submission
                document.getElementById('loginForm').addEventListener('submit', function(e) {
                    e.preventDefault();
                    const email = document.getElementById('loginEmail').value;
                    const password = document.getElementById('loginPassword').value;
                    
                    // Simulate login process
                    const submitBtn = this.querySelector('button[type="submit"]');
                    const originalText = submitBtn.textContent;
                    
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Signing in...';
                    
                    setTimeout(() => {
                        // For demo purposes, create a user object
                        currentUser = {
                            firstName: 'John',
                            lastName: 'Doe',
                            email: email,
                            college: 'Stanford University',
                            graduationYear: '2020',
                            branch: 'Computer Science'
                        };
                        
                        // Save to localStorage
                        localStorage.setItem('currentUser', JSON.stringify(currentUser));
                        
                        // Show application
                        showApplication();
                        
                        // Show success message
                        showToast('Login successful!');
                        
                        submitBtn.disabled = false;
                        submitBtn.textContent = originalText;
                    }, 1500);
                });
                
                // Registration form submission
                document.getElementById('registerForm').addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Get form values
                    const firstName = document.getElementById('firstName').value;
                    const lastName = document.getElementById('lastName').value;
                    const email = document.getElementById('registerEmail').value;
                    const password = document.getElementById('registerPassword').value;
                    const confirmPassword = document.getElementById('confirmPassword').value;
                    const college = document.getElementById('collegeName').value;
                    const graduationYear = document.getElementById('graduationYear').value;
                    const branch = document.getElementById('branch').value;
                    
                    // Password confirmation check
                    if (password !== confirmPassword) {
                        showToast('Passwords do not match!', 'error');
                        return;
                    }
                    
                    // Simulate registration process
                    const submitBtn = this.querySelector('button[type="submit"]');
                    const originalText = submitBtn.textContent;
                    
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Registering...';
                    
                    setTimeout(() => {
                        // Create user object
                        currentUser = {
                            firstName: firstName,
                            lastName: lastName,
                            email: email,
                            college: college,
                            graduationYear: graduationYear,
                            branch: branch
                        };
                        
                        // Save to localStorage
                        localStorage.setItem('currentUser', JSON.stringify(currentUser));
                        
                        // Hide modal
                        bootstrap.Modal.getInstance(document.getElementById('registerModal')).hide();
                        
                        // Show application
                        showApplication();
                        
                        // Show success message
                        showToast('Registration successful! Welcome to Alumni Connect.');
                        
                        submitBtn.disabled = false;
                        submitBtn.textContent = originalText;
                    }, 1500);
                });
                
                // Logout functionality
                document.getElementById('logoutBtn').addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Clear user data
                    localStorage.removeItem('currentUser');
                    currentUser = null;
                    
                    // Show login screen
                    document.getElementById('authContainer').style.display = 'flex';
                    document.getElementById('mainApplication').style.display = 'none';
                    
                    // Show success message
                    showToast('You have been logged out successfully.');
                });
            }
            
            // Load featured alumni on home page
            function loadFeaturedAlumni() {
                const container = document.getElementById('featuredAlumni');
                container.innerHTML = '';
                
                // Get 3 random alumni for featured section
                const featuredAlumni = [...alumniData].sort(() => 0.5 - Math.random()).slice(0, 3);
                
                featuredAlumni.forEach(alumni => {
                    const col = document.createElement('div');
                    col.className = 'col-md-4 mb-4';
                    
                    col.innerHTML = `
                        <div class="card alumni-card ${alumni.branch} h-100">
                            <div class="card-body text-center">
                                <img src="${alumni.image}" alt="${alumni.name}" class="alumni-img mb-3">
                                <span class="branch-badge">${getBranchName(alumni.branch)}</span>
                                <h5 class="card-title">${alumni.name}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">${alumni.position} at ${alumni.company}</h6>
                                <p class="card-text small">${alumni.college}, ${alumni.year}</p>
                                
                                <div class="social-links mb-3">
                                    ${alumni.social.linkedin ? `<a href="${alumni.social.linkedin}" target="_blank"><i class="fab fa-linkedin"></i></a>` : ''}
                                    ${alumni.social.twitter ? `<a href="${alumni.social.twitter}" target="_blank"><i class="fab fa-twitter"></i></a>` : ''}
                                </div>
                                
                                <button class="btn btn-outline-primary btn-sm view-profile" data-id="${alumni.id}">
                                    View Profile
                                </button>
                            </div>
                        </div>
                    `;
                    
                    container.appendChild(col);
                });
                
                // Add event listeners to view profile buttons
                document.querySelectorAll('.view-profile').forEach(button => {
                    button.addEventListener('click', function() {
                        const alumniId = this.getAttribute('data-id');
                        showAlumniDetails(alumniId);
                    });
                });
            }
            
            // Load alumni data into the directory page
            function loadAlumniData() {
                const container = document.getElementById('alumniContainer');
                container.innerHTML = '';
                
                // Apply filters
                let filteredAlumni = alumniData.filter(alumni => {
                    // Branch filter
                    if (activeFilters.branch.length > 0 && !activeFilters.branch.includes(alumni.branch)) {
                        return false;
                    }
                    
                    // Year filter
                    if (activeFilters.year && alumni.year !== activeFilters.year) {
                        return false;
                    }
                    
                    // Location filter
                    if (activeFilters.location && !alumni.location.toLowerCase().includes(activeFilters.location.toLowerCase())) {
                        return false;
                    }
                    
                    // Company filter
                    if (activeFilters.company && !alumni.company.toLowerCase().includes(activeFilters.company.toLowerCase())) {
                        return false;
                    }
                    
                    // Skills filter
                    if (activeFilters.skills.length > 0) {
                        const hasSkill = activeFilters.skills.some(skill => 
                            alumni.skills.some(s => s.toLowerCase().includes(skill.toLowerCase()))
                        );
                        if (!hasSkill) return false;
                    }
                    
                    // Mentoring filter
                    if (activeFilters.mentoring && !alumni.availableForMentoring) {
                        return false;
                    }
                    
                    // Hiring filter
                    if (activeFilters.hiring && !alumni.hiring) {
                        return false;
                    }
                    
                    return true;
                });
                
                // Display message if no results
                if (filteredAlumni.length === 0) {
                    container.innerHTML = `
                        <div class="col-12 text-center py-5">
                            <i class="fas fa-search fa-3x mb-3 text-muted"></i>
                            <h4>No alumni found</h4>
                            <p class="text-muted">Try adjusting your filters or search query</p>
                            <button class="btn btn-primary mt-2" id="resetFiltersBtn">Reset All Filters</button>
                        </div>
                    `;
                    
                    document.getElementById('resetFiltersBtn').addEventListener('click', resetAllFilters);
                    return;
                }
                
                // Render alumni cards
                filteredAlumni.forEach(alumni => {
                    const card = document.createElement('div');
                    card.className = `col-md-6 col-lg-4 mb-4 alumni-item ${currentView === 'list' ? 'd-flex' : ''}`;
                    
                    card.innerHTML = `
                        <div class="card alumni-card ${alumni.branch} ${currentView === 'list' ? 'flex-row' : ''}">
                            ${currentView === 'list' ? `
                                <div class="col-4">
                                    <img src="${alumni.image}" alt="${alumni.name}" class="card-img-top rounded-start" style="height: 100%; object-fit: cover;">
                                </div>
                                <div class="col-8">
                            ` : ''}
                            
                            <div class="card-body ${currentView === 'list' ? 'py-2' : 'text-center'}">
                                ${currentView === 'grid' ? `
                                    <img src="${alumni.image}" alt="${alumni.name}" class="alumni-img mb-3">
                                ` : ''}
                                
                                <span class="branch-badge">${getBranchName(alumni.branch)}</span>
                                
                                <h5 class="card-title ${currentView === 'list' ? 'h6' : ''}">${alumni.name}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">${alumni.position} at ${alumni.company}</h6>
                                
                                <p class="card-text small ${currentView === 'grid' ? 'd-none' : ''}">${alumni.college}, ${alumni.year}</p>
                                
                                <div class="social-links mb-2">
                                    ${alumni.social.linkedin ? `<a href="${alumni.social.linkedin}" target="_blank"><i class="fab fa-linkedin"></i></a>` : ''}
                                    ${alumni.social.twitter ? `<a href="${alumni.social.twitter}" target="_blank"><i class="fab fa-twitter"></i></a>` : ''}
                                    ${alumni.social.github ? `<a href="${alumni.social.github}" target="_blank"><i class="fab fa-github"></i></a>` : ''}
                                    ${alumni.social.website ? `<a href="${alumni.social.website}" target="_blank"><i class="fas fa-globe"></i></a>` : ''}
                                </div>
                                
                                <div class="d-flex justify-content-between">
                                    <button class="btn btn-outline-primary btn-sm view-profile" data-id="${alumni.id}">
                                        View Profile
                                    </button>
                                    <button class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-envelope"></i>
                                    </button>
                                </div>
                            </div>
                            
                            ${currentView === 'list' ? '</div>' : ''}
                        </div>
                    `;
                    
                    container.appendChild(card);
                });
                
                // Add event listeners to view profile buttons
                document.querySelectorAll('.view-profile').forEach(button => {
                    button.addEventListener('click', function() {
                        const alumniId = this.getAttribute('data-id');
                        showAlumniDetails(alumniId);
                    });
                });
            }
            
            // Get branch name from branch key
            function getBranchName(branchKey) {
                const branches = {
                    'civil': 'Civil Eng',
                    'cse': 'Computer Science',
                    'electrical': 'Electrical Eng',
                    'mechanical': 'Mechanical Eng',
                    'business': 'Business',
                    'medical': 'Medical',
                    'arts': 'Arts & Design'
                };
                return branches[branchKey] || branchKey;
            }
            
            // Get branch color from branch key
            function getBranchColor(branchKey) {
                const colors = {
                    'civil': 'var(--civil)',
                    'cse': 'var(--cse)',
                    'electrical': 'var(--electrical)',
                    'mechanical': 'var(--mechanical)',
                    'business': 'var(--business)',
                    'medical': 'var(--medical)',
                    'arts': 'var(--arts)'
                };
                return colors[branchKey] || 'var(--primary)';
            }
            
            // Show alumni details in modal
            function showAlumniDetails(alumniId) {
                const alumni = alumniData.find(a => a.id == alumniId);
                if (!alumni) return;
                
                // Set modal content
                document.getElementById('alumniName').textContent = alumni.name;
                document.getElementById('modalAlumniImg').src = alumni.image;
                document.getElementById('modalBranchBadge').textContent = getBranchName(alumni.branch);
                document.getElementById('modalBranchBadge').style.backgroundColor = getBranchColor(alumni.branch);
                document.getElementById('modalAbout').textContent = alumni.about;
                document.getElementById('modalEmail').textContent = alumni.email;
                document.getElementById('modalPhone').textContent = alumni.phone;
                document.getElementById('modalLocation').textContent = alumni.location;
                document.getElementById('modalDegree').textContent = alumni.degree;
                document.getElementById('modalCollege').textContent = alumni.college;
                document.getElementById('modalYear').textContent = alumni.year;
                
                // Set social links
                const socialLinksContainer = document.getElementById('modalSocialLinks');
                socialLinksContainer.innerHTML = '';
                
                if (alumni.social.linkedin) {
                    socialLinksContainer.innerHTML += `<a href="${alumni.social.linkedin}" target="_blank"><i class="fab fa-linkedin fa-lg"></i></a>`;
                }
                if (alumni.social.twitter) {
                    socialLinksContainer.innerHTML += `<a href="${alumni.social.twitter}" target="_blank"><i class="fab fa-twitter fa-lg"></i></a>`;
                }
                if (alumni.social.github) {
                    socialLinksContainer.innerHTML += `<a href="${alumni.social.github}" target="_blank"><i class="fab fa-github fa-lg"></i></a>`;
                }
                if (alumni.social.website) {
                    socialLinksContainer.innerHTML += `<a href="${alumni.social.website}" target="_blank"><i class="fas fa-globe fa-lg"></i></a>`;
                }
                
                // Set experience
                const experienceContainer = document.getElementById('modalExperience');
                experienceContainer.innerHTML = '';
                
                alumni.experience.forEach(exp => {
                    experienceContainer.innerHTML += `
                        <div class="d-flex justify-content-between align-items-start py-2 border-bottom">
                            <div>
                                <h6 class="mb-0">${exp.position}</h6>
                                <p class="mb-0 text-muted">${exp.company}</p>
                                <p class="mb-0 small">${exp.description}</p>
                            </div>
                            <span class="text-muted">${exp.duration}</span>
                        </div>
                    `;
                });
                
                // Set skills
                const skillsContainer = document.getElementById('modalSkills');
                skillsContainer.innerHTML = '';
                
                alumni.skills.forEach(skill => {
                    skillsContainer.innerHTML += `<span class="skill-badge">${skill}</span>`;
                });
                
                // Show modal
                const modal = new bootstrap.Modal(document.getElementById('profileModal'));
                modal.show();
            }
            
            // Setup page navigation
            function setupPageNavigation() {
                document.querySelectorAll('[data-page]').forEach(link => {
                    link.addEventListener('click', function(e) {
                        e.preventDefault();
                        const pageId = this.getAttribute('data-page');
                        showPage(pageId);
                    });
                });
            }
            
            // Show specific page
            function showPage(pageId) {
                // Hide all pages
                document.querySelectorAll('.page').forEach(page => {
                    page.classList.add('d-none');
                });
                
                // Show selected page
                document.getElementById(`${pageId}-page`).classList.remove('d-none');
                
                // Update active nav link
                document.querySelectorAll('.nav-link').forEach(navLink => {
                    navLink.classList.remove('active');
                });
                
                document.querySelectorAll(`[data-page="${pageId}"]`).forEach(link => {
                    link.classList.add('active');
                });
                
                // Load data for specific pages
                if (pageId === 'directory') {
                    loadAlumniData();
                }
                
                // Scroll to top
                window.scrollTo(0, 0);
            }
            
            // Setup event listeners
            function setupEventListeners() {
                // Advanced search toggle
                document.getElementById('advancedSearchToggle').addEventListener('click', function() {
                    const tools = document.getElementById('advancedSearchTools');
                    tools.classList.toggle('d-none');
                    this.innerHTML = tools.classList.contains('d-none') ? 
                        '<i class="fas fa-sliders-h"></i> Advanced Search' : 
                        '<i class="fas fa-times"></i> Close Search';
                });
                
                // Apply filters button
                document.getElementById('applyFilters').addEventListener('click', function() {
                    // Get filter values
                    activeFilters.branch = [document.getElementById('branchFilter').value].filter(Boolean);
                    activeFilters.year = document.getElementById('yearFilter').value;
                    activeFilters.location = document.getElementById('locationFilter').value;
                    activeFilters.company = document.getElementById('companyFilter').value;
                    activeFilters.skills = Array.from(document.getElementById('skillsFilter').selectedOptions).map(opt => opt.value);
                    activeFilters.mentoring = document.getElementById('availableForMentoring').checked;
                    activeFilters.hiring = document.getElementById('hiring').checked;
                    
                    updateActiveFiltersDisplay();
                    loadAlumniData();
                    
                    // Show toast notification
                    showToast('Filters applied successfully');
                });
                
                // Clear filters button
                document.getElementById('clearFilters').addEventListener('click', resetAllFilters);
                
                // Quick filters
                document.getElementById('applyQuickFilters').addEventListener('click', function() {
                    // Get selected branches
                    activeFilters.branch = Array.from(document.querySelectorAll('.branch-filter:checked')).map(cb => cb.value);
                    
                    // Get other filters
                    activeFilters.year = document.getElementById('yearQuickFilter').value;
                    activeFilters.location = document.getElementById('locationQuickFilter').value;
                    
                    updateActiveFiltersDisplay();
                    loadAlumniData();
                    
                    // Show toast notification
                    showToast('Filters applied successfully');
                });
                
                // Search input
                document.getElementById('searchButton').addEventListener('click', performSearch);
                document.getElementById('searchInput').addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        performSearch();
                    }
                });
                
                // View options
                document.querySelectorAll('.view-option').forEach(option => {
                    option.addEventListener('click', function(e) {
                        e.preventDefault();
                        
                        // Update active view
                        document.querySelectorAll('.view-option').forEach(opt => opt.classList.remove('active'));
                        this.classList.add('active');
                        
                        currentView = this.getAttribute('data-view');
                        loadAlumniData();
                    });
                });
            }
            
            // Perform search
            function performSearch() {
                const query = document.getElementById('searchInput').value.toLowerCase().trim();
                
                if (!query) {
                    loadAlumniData();
                    return;
                }
                
                // Filter alumni based on search query
                const filteredAlumni = alumniData.filter(alumni => {
                    return (
                        alumni.name.toLowerCase().includes(query) ||
                        alumni.company.toLowerCase().includes(query) ||
                        alumni.position.toLowerCase().includes(query) ||
                        alumni.skills.some(skill => skill.toLowerCase().includes(query)) ||
                        alumni.college.toLowerCase().includes(query)
                    );
                });
                
                // Display results
                const container = document.getElementById('alumniContainer');
                container.innerHTML = '';
                
                if (filteredAlumni.length === 0) {
                    container.innerHTML = `
                        <div class="col-12 text-center py-5">
                            <i class="fas fa-search fa-3x mb-3 text-muted"></i>
                            <h4>No results found for "${query}"</h4>
                            <p class="text-muted">Try different search terms</p>
                        </div>
                    `;
                    return;
                }
                
                // Render search results
                filteredAlumni.forEach(alumni => {
                    const card = document.createElement('div');
                    card.className = `col-md-6 col-lg-4 mb-4 alumni-item`;
                    
                    card.innerHTML = `
                        <div class="card alumni-card ${alumni.branch}">
                            <div class="card-body text-center">
                                <img src="${alumni.image}" alt="${alumni.name}" class="alumni-img mb-3">
                                <span class="branch-badge">${getBranchName(alumni.branch)}</span>
                                <h5 class="card-title">${alumni.name}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">${alumni.position} at ${alumni.company}</h6>
                                
                                <div class="social-links mb-2">
                                    ${alumni.social.linkedin ? `<a href="${alumni.social.linkedin}" target="_blank"><i class="fab fa-linkedin"></i></a>` : ''}
                                    ${alumni.social.twitter ? `<a href="${alumni.social.twitter}" target="_blank"><i class="fab fa-twitter"></i></a>` : ''}
                                </div>
                                
                                <button class="btn btn-outline-primary btn-sm view-profile" data-id="${alumni.id}">
                                    View Profile
                                </button>
                            </div>
                        </div>
                    `;
                    
                    container.appendChild(card);
                });
                
                // Add event listeners to view profile buttons
                document.querySelectorAll('.view-profile').forEach(button => {
                    button.addEventListener('click', function() {
                        const alumniId = this.getAttribute('data-id');
                        showAlumniDetails(alumniId);
                    });
                });
                
                // Show toast notification
                showToast(`Found ${filteredAlumni.length} results for "${query}"`);
            }
            
            // Update active filters display
            function updateActiveFiltersDisplay() {
                const container = document.getElementById('activeFilters');
                container.innerHTML = '';
                
                // Branch filters
                activeFilters.branch.forEach(branch => {
                    container.innerHTML += `<span class="badge bg-primary me-1">${getBranchName(branch)}</span>`;
                });
                
                // Year filter
                if (activeFilters.year) {
                    container.innerHTML += `<span class="badge bg-info me-1">Year: ${activeFilters.year}</span>`;
                }
                
                // Location filter
                if (activeFilters.location) {
                    container.innerHTML += `<span class="badge bg-warning me-1">Location: ${activeFilters.location}</span>`;
                }
                
                // Company filter
                if (activeFilters.company) {
                    container.innerHTML += `<span class="badge bg-success me-1">Company: ${activeFilters.company}</span>`;
                }
                
                // Skills filters
                activeFilters.skills.forEach(skill => {
                    container.innerHTML += `<span class="badge bg-secondary me-1">Skill: ${skill}</span>`;
                });
                
                // Mentoring filter
                if (activeFilters.mentoring) {
                    container.innerHTML += `<span class="badge bg-dark me-1">Available for Mentoring</span>`;
                }
                
                // Hiring filter
                if (activeFilters.hiring) {
                    container.innerHTML += `<span class="badge bg-danger me-1">Currently Hiring</span>`;
                }
            }
            
            // Reset all filters
            function resetAllFilters() {
                activeFilters = {
                    branch: [],
                    year: '',
                    location: '',
                    company: '',
                    skills: [],
                    mentoring: false,
                    hiring: false
                };
                
                // Reset form elements
                document.querySelectorAll('.branch-filter').forEach(cb => cb.checked = false);
                document.getElementById('yearFilter').value = '';
                document.getElementById('locationFilter').value = '';
                document.getElementById('companyFilter').value = '';
                document.getElementById('skillsFilter').selectedIndex = -1;
                document.getElementById('availableForMentoring').checked = false;
                document.getElementById('hiring').checked = false;
                
                document.getElementById('yearQuickFilter').value = '';
                document.getElementById('locationQuickFilter').value = '';
                
                updateActiveFiltersDisplay();
                loadAlumniData();
                
                // Show toast notification
                showToast('All filters cleared');
            }
            
            // Show toast notification
            function showToast(message, type = 'success') {
                const toast = document.createElement('div');
                toast.className = `toast ${type}`;
                toast.innerHTML = `
                    <div class="toast-body">
                        <div class="d-flex justify-content-between">
                            <div>${message}</div>
                            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                        </div>
                    </div>
                `;
                
                document.querySelector('.toast-container').appendChild(toast);
                
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();
                
                // Remove toast after it hides
                toast.addEventListener('hidden.bs.toast', () => {
                    toast.remove();
                });
            }
            
            // Initialize the application
            initApplication();
        });
    </script>
</body>
</html>
